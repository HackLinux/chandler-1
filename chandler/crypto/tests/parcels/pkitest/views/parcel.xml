<Parcel itemName="views"
        xmlns="//Schema/Core"
        xmlns:blocks="//parcels/osaf/framework/blocks"
        xmlns:views="//parcels/pkitest/views"
        itemClass="pkitest.PKITest.PKITestViewParcel">

  <!-- The main block for the view: -->

  <blocks:BoxContainer itemName="PKITestView"
        itemClass="pkitest.PKITest.PKITestView">

    <displayName>PKI Test</displayName>
    <childrenBlocks itemref="views:PKITestView/serverRow"/>
    <childrenBlocks itemref="views:PKITestView/clientRow"/>
    <childrenBlocks itemref="views:PKITestView/sendRow"/>
    <orientationEnum>Vertical</orientationEnum>
    <blockEvents itemref="views:StartStopServerEvent"/>
    <blockEvents itemref="views:ConnectDisconnectClientEvent"/>
    <blockEvents itemref="views:SendDataToServerEvent"/>

    <blocks:BoxContainer itemName="serverRow">
      <childrenBlocks itemref="views:PKITestView/StartStopServerButton"/>
      <childrenBlocks itemref="views:PKITestView/ServerPortLabel"/>
      <childrenBlocks itemref="views:PKITestView/ServerPortText"/>
    </blocks:BoxContainer>

    <blocks:BoxContainer itemName="clientRow">
      <childrenBlocks itemref="views:PKITestView/ConnectDisconnectClientButton"/>
      <childrenBlocks itemref="views:PKITestView/ClientHostLabel"/>
      <childrenBlocks itemref="views:PKITestView/ClientHostText"/>
      <childrenBlocks itemref="views:PKITestView/ClientPortLabel"/>
      <childrenBlocks itemref="views:PKITestView/ClientPortText"/>
    </blocks:BoxContainer>

    <blocks:BoxContainer itemName="sendRow">
      <childrenBlocks itemref="views:PKITestView/sendCol"/>
      <childrenBlocks itemref="views:PKITestView/receiveCol"/>
    </blocks:BoxContainer>

    <blocks:BoxContainer itemName="sendCol">
      <childrenBlocks itemref="views:PKITestView/SendButtonLabelSizer"/>
      <childrenBlocks itemref="views:PKITestView/RepositoryTree"/>
      <orientationEnum>Vertical</orientationEnum>
    </blocks:BoxContainer>

    <blocks:BoxContainer itemName="SendButtonLabelSizer">
      <childrenBlocks itemref="views:PKITestView/SendDataToServerButton"/>
      <childrenBlocks itemref="views:PKITestView/SendLabel"/>
    </blocks:BoxContainer>

    <blocks:BoxContainer itemName="receiveCol">
      <childrenBlocks itemref="views:PKITestView/ReceivedLabel"/>
      <childrenBlocks itemref="views:PKITestView/ReceivedText"/>
      <orientationEnum>Vertical</orientationEnum>
    </blocks:BoxContainer>

    <!-- The buttons -->

    <blocks:Button itemName="StartStopServerButton">
      <title>Start/Stop Server</title>
      <buttonKind>Text</buttonKind>
      <event itemref="views:StartStopServerEvent"/>
      <size>120,20</size>
      <minimumSize>120,20</minimumSize>
      <alignmentEnum>alignCenter</alignmentEnum>
      <stretchFactor>0.0</stretchFactor>
    </blocks:Button>

    <blocks:Button itemName="ConnectDisconnectClientButton">
      <title>Connect/Disconnect Client</title>
      <buttonKind>Text</buttonKind>
      <event itemref="views:ConnectDisconnectClientEvent"/>
      <size>140,20</size>
      <minimumSize>140,20</minimumSize>
      <alignmentEnum>alignCenter</alignmentEnum>
      <stretchFactor>0.0</stretchFactor>
    </blocks:Button>

    <blocks:Button itemName="SendDataToServerButton">
      <title>Send</title>
      <buttonKind>Text</buttonKind>
      <event itemref="views:SendDataToServerEvent"/>
      <size>80,20</size>
      <minimumSize>80,20</minimumSize>
      <alignmentEnum>alignCenter</alignmentEnum>
      <stretchFactor>0.0</stretchFactor>
    </blocks:Button>

    <blocks:StaticText itemName="SendLabel">
      <textAlignmentEnum>Left</textAlignmentEnum>
      <characterStyle itemref="views:PKITestView/TextStyle"/>
      <title>(Select item and click send)</title>
      <size>80,20</size>
      <minimumSize>80,20</minimumSize>
      <border>3.0, 3.0, 3.0, 3.0</border>
      <alignmentEnum>alignCenter</alignmentEnum>
      <stretchFactor>0.0</stretchFactor>
    </blocks:StaticText>  

    <blocks:StaticText itemName="ReceivedLabel">
      <textAlignmentEnum>Left</textAlignmentEnum>
      <characterStyle itemref="views:PKITestView/TextStyle"/>
      <title>Received:</title>
      <size>80,20</size>
      <minimumSize>80,20</minimumSize>
      <border>3.0, 3.0, 3.0, 3.0</border>
      <alignmentEnum>alignCenter</alignmentEnum>
      <stretchFactor>0.0</stretchFactor>
    </blocks:StaticText>  

    <blocks:StaticText itemName="ServerPortLabel">
      <textAlignmentEnum>Left</textAlignmentEnum>
      <characterStyle itemref="views:PKITestView/TextStyle"/>
      <title>Port:</title>
      <size>80,20</size>
      <minimumSize>80,20</minimumSize>
      <border>3.0, 3.0, 3.0, 3.0</border>
      <alignmentEnum>alignCenter</alignmentEnum>
      <stretchFactor>0.0</stretchFactor>
    </blocks:StaticText>  

    <blocks:EditText itemName="ServerPortText">
      <lineStyleEnum>SingleLine</lineStyleEnum>
      <textAlignmentEnum>Left</textAlignmentEnum>
      <textStyleEnum>PlainText</textStyleEnum>
      <characterStyle itemref="views:PKITestView/TextStyle"/>
      <readOnly>False</readOnly>
      <!-- XXX Should somehow set a default value here -->
      <size>80,20</size>
      <minimumSize>80,20</minimumSize>
      <alignmentEnum>alignCenter</alignmentEnum>
      <stretchFactor>0.0</stretchFactor>
    </blocks:EditText>

    <blocks:StaticText itemName="ClientHostLabel">
      <textAlignmentEnum>Left</textAlignmentEnum>
      <characterStyle itemref="views:PKITestView/TextStyle"/>
      <title>Host:</title>
      <size>80,20</size>
      <minimumSize>80,20</minimumSize>
      <border>3.0, 3.0, 3.0, 3.0</border>
      <alignmentEnum>alignCenter</alignmentEnum>
      <stretchFactor>0.0</stretchFactor>
    </blocks:StaticText>  

    <blocks:EditText itemName="ClientHostText">
      <lineStyleEnum>SingleLine</lineStyleEnum>
      <textAlignmentEnum>Left</textAlignmentEnum>
      <textStyleEnum>PlainText</textStyleEnum>
      <characterStyle itemref="views:PKITestView/TextStyle"/>
      <readOnly>False</readOnly>
      <size>80,20</size>
      <minimumSize>80,20</minimumSize>
      <border>0.0, 0.0, 0.0, 0.0</border>
      <alignmentEnum>alignCenter</alignmentEnum>
      <stretchFactor>0.0</stretchFactor>
    </blocks:EditText>

    <blocks:StaticText itemName="ClientPortLabel">
      <textAlignmentEnum>Left</textAlignmentEnum>
      <characterStyle itemref="views:PKITestView/TextStyle"/>
      <title>Port:</title>
      <size>80,20</size>
      <minimumSize>80,20</minimumSize>
      <border>3.0, 3.0, 3.0, 3.0</border>
      <alignmentEnum>alignCenter</alignmentEnum>
      <stretchFactor>0.0</stretchFactor>
    </blocks:StaticText>  

    <blocks:EditText itemName="ClientPortText">
      <lineStyleEnum>SingleLine</lineStyleEnum>
      <textAlignmentEnum>Left</textAlignmentEnum>
      <textStyleEnum>PlainText</textStyleEnum>
      <characterStyle itemref="views:PKITestView/TextStyle"/>
      <readOnly>False</readOnly>
      <size>80,20</size>
      <minimumSize>80,20</minimumSize>
      <alignmentEnum>alignCenter</alignmentEnum>
      <stretchFactor>0.0</stretchFactor>
    </blocks:EditText>

    <blocks:EditText itemName="ReceivedText">
      <textAlignmentEnum>Left</textAlignmentEnum>
      <lineStyleEnum>MultiLine</lineStyleEnum>
      <textStyleEnum>PlainText</textStyleEnum>
      <readOnly>False</readOnly>
      <characterStyle itemref="views:PKITestView/TextStyle"/>
      <size>200,400</size>
      <minimumSize>100,100</minimumSize>
      <border>3.0, 3.0, 3.0, 3.0</border>
    </blocks:EditText>

    <blocks:Tree itemName="RepositoryTree">
      <!-- Attributes -->
      <elementDelegate>osaf.views.repositoryviewer.Repository.RepositoryDelegate</elementDelegate>

      <hideRoot>False</hideRoot>
      <noLines>False</noLines>
      <columnHeadings>Item Name</columnHeadings>
      <columnHeadings>Display Name</columnHeadings>
      <columnHeadings>Kind</columnHeadings>
      <columnHeadings>UUID</columnHeadings>
      <columnHeadings>Path</columnHeadings>    
      <columnWidths>160</columnWidths>
      <columnWidths>110</columnWidths>
      <columnWidths>70</columnWidths>
      <columnWidths>245</columnWidths>
      <columnWidths>155</columnWidths>

      <size>200,400</size>
      <minimumSize>100,100</minimumSize>
    </blocks:Tree>

    <!-- A style for normal text -->
    <blocks:CharacterStyle itemName="TextStyle">
      <fontFamily>DefaultUIFont</fontFamily>
      <fontSize>10.0</fontSize>
      <fontStyle></fontStyle>
      <fontName></fontName>
    </blocks:CharacterStyle>

  </blocks:BoxContainer>

  <!-- The events -->

  <blocks:BlockEvent itemName="StartStopServerEvent">
    <dispatchEnum>SendToBlock</dispatchEnum>
    <dispatchToBlock itemref="views:PKITestView"/>
    <methodName>OnStartStopServerEvent</methodName>
  </blocks:BlockEvent>

  <blocks:BlockEvent itemName="ConnectDisconnectClientEvent">
    <dispatchEnum>SendToBlock</dispatchEnum>
    <dispatchToBlock itemref="views:PKITestView"/>
    <methodName>OnConnectDisconnectClientEvent</methodName>
  </blocks:BlockEvent>

  <blocks:BlockEvent itemName="SendDataToServerEvent">
    <dispatchEnum>SendToBlock</dispatchEnum>
    <dispatchToBlock itemref="views:PKITestView"/>
    <methodName>OnSendDataToServerEvent</methodName>
  </blocks:BlockEvent>

  <!-- The node that is added to the side bar -->

  <blocks:Node itemName="PKITestViewNode">
    <displayName>PKI Test</displayName>
    <item itemref="views:PKITestView"/>
  </blocks:Node>

</Parcel>
