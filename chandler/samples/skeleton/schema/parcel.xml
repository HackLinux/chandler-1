<?xml version="1.0" encoding="iso-8859-1"?>

<!-- the doc namespace refers to the current document -->
<Parcel xmlns="http://osafoundation.org/parcels/core"
        xmlns:doc="http://osafoundation.org/samples/skeleton/schema"
        xmlns:content="http://osafoundation.org/parcels/osaf/contentmodel">

  <namespace value="http://osafoundation.org/samples/skeleton/schema"/>
  <displayName>Start Here Example</displayName>
  <description>This is a skeleton parcel for writing schemas</description>


  <!-- <version>0.1</version> -->

  <!-- Attributes that exist on all Kinds in this file -->
  <Attribute itsName="attr1">
    <displayName>Attribute 1</displayName>
    <cardinality>single</cardinality>
    <type itemref="String"/>
  </Attribute>

  <!-- Kind: Kind1 -->

  <Kind itsName="Kind1">
    <superKinds itemref="content:ContentItem"/>
    <!-- <classes key="python">samples.skeleton.Kind1</classes> -->
    
    <displayName>Default Kind</displayName>

    <!-- redirection attributes -->
    <Attribute itsName="who">
        <redirectTo value="attr1"/>
    </Attribute>

    <!-- Attributes unique to this kind -->
    
    <!-- first declare the attribute -->
    <Attribute itsName="attr2">
      <displayName>Attribute 2</displayName>
      <cardinality>single</cardinality>
      <type itemref="String"/>
    </Attribute>
    <attributes itemref="doc:Kind1/attr2"/>
  
    <!-- pulling in attributes from elsewhere in this file -->
    <attributes itemref="doc:attr1"/>


    <!-- Typical clouds include a "default" cloud, and a "sharing" cloud -->
    <Cloud itsName="SharingCloud">
        <Endpoint itsName="attr1">
            <attribute value="attr1"/>
        </Endpoint>
        <endpoints itemref="doc:Kind1/SharingCloud/attr1"/>
        <Endpoint itsName="attr2">
            <attribute value="attr2"/>
        </Endpoint>
        <endpoints itemref="doc:Kind1/SharingCloud/attr2"/>
    </Cloud>
    <clouds alias="sharing" itemref="doc:Kind1/SharingCloud"/>

  </Kind>  
  
</Parcel>
