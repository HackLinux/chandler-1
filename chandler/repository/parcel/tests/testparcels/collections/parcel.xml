<Parcel itemName="collections"
        xmlns="//Schema/Core"
        xmlns:coll="//parcels/collections" >

  <Kind itemName="Block">
    <superKinds itemref="Item"/>
    <attributes itemref="coll:parentBlock"/>
    <attributes itemref="coll:childrenBlocks"/>
  </Kind>

  <Attribute itemName="parentBlock">
     <type itemref="coll:Block"/>
     <cardinality>single</cardinality>
     <inverseAttribute itemref="coll:childrenBlocks"/>
     <defaultValue itemref="None"/>
   </Attribute>

   <Attribute itemName="childrenBlocks">
     <type itemref="coll:Block"/>
     <cardinality>list</cardinality>
     <inverseAttribute itemref="coll:parentBlock"/>
     <initialValue/>
   </Attribute>

</Parcel>
