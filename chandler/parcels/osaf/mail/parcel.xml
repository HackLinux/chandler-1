<?xml version="1.0" encoding="iso-8859-1"?>

<Parcel itsName="mail"
     xmlns="http://osafoundation.org/parcels/core"
     xmlns:content="http://osafoundation.org/parcels/osaf/contentmodel/mail"
     xmlns:current="http://osafoundation.org/parcels/osaf/current"
     xmlns:mail="http://osafoundation.org/parcels/osaf/mail">

  <content:IMAPAccount itsName="PredefinedIMAPAccount">
    <displayName>Incoming IMAP mail</displayName>
    <!-- This points replyToAddress to the email address item below-->
    <replyToAddress itemref="mail:PredefinedReplyAddress" />
    <!-- This points to the SMTPAccount item below -->
    <defaultSMTPAccount itemref="mail:PredefinedSMTPAccount" />
    <currentItemOf itemref="current:MailAccount"/>
  </content:IMAPAccount>

  <content:POPAccount itsName="PredefinedPOPAccount">
    <displayName>Incoming POP mail</displayName>
    <!-- This points replyToAddress to the email address item below-->
    <replyToAddress itemref="mail:PredefinedReplyAddress" />
    <!-- This points to the SMTPAccount item below -->
    <defaultSMTPAccount itemref="mail:PredefinedSMTPAccount" />
  </content:POPAccount>

  <content:EmailAddress itsName="PredefinedReplyAddress" />

  <content:SMTPAccount itsName="PredefinedSMTPAccount">
    <displayName>Outgoing SMTP mail</displayName>
    <currentItemOf itemref="current:SMTPAccount"/>
  </content:SMTPAccount>

  <content:IMAPAccount itsName="TestIMAPAccount">
    <displayName>IMAP Account</displayName>
    <description>The IMAP Account used for testing account settings</description>
    <host>host</host>
    <username>username</username>
    <isActive>False</isActive>
    <!-- This points replyToAddress to the email address item below-->
    <replyToAddress itemref="mail:TestReplyAddress" />
    <!-- This points to the SMTPAccount item below -->
    <defaultSMTPAccount itemref="mail:TestSMTPAccount" />
  </content:IMAPAccount>

  <content:POPAccount itsName="TestPOPAccount">
    <displayName>POP Account</displayName>
    <description>The POP Account used for testing account settings</description>
    <host>host</host>
    <username>username</username>
    <isActive>False</isActive>
    <!-- This points replyToAddress to the email address item below-->
    <replyToAddress itemref="mail:TestReplyAddress" />
    <!-- This points to the SMTPAccount item below -->
    <defaultSMTPAccount itemref="mail:TestSMTPAccount" />
  </content:POPAccount>

  <content:EmailAddress itsName="TestReplyAddress" />

  <content:SMTPAccount itsName="TestSMTPAccount">
    <displayName>SMTP Account</displayName>
    <description>The SMTP Account used for testing account settings</description>
    <isActive>False</isActive>
  </content:SMTPAccount>

</Parcel>

