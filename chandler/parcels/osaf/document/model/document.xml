    <superKinds itemref="doc:Block" />
  </Kind>

  <Kind itemName="doc:ToggleButton">
    <displayName>ToggleButton</displayName>
    
    <classes key="python">OSAF.document.model.SimpleControls.ToggleButton</classes>
    <superKinds itemref="doc:Block" />
  </Kind>

  <Kind itemName="doc:Choice">
    <displayName>Choice</displayName>
    
    <classes key="python">OSAF.document.model.SimpleControls.Choice</classes>
    <superKinds itemref="doc:Block" />
  </Kind>

  <Kind itemName="doc:Tree">
    <displayName>Tree</displayName>
    
    <classes key="python">OSAF.document.model.SimpleControls.Tree</classes>
    <superKinds itemref="doc:Block" />
