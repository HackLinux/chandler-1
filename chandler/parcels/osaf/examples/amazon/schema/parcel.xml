<?xml version="1.0" encoding="iso-8859-1"?>

<!-- the doc namespace refers to the current document -->
<Parcel xmlns="http://osafoundation.org/parcels/core"
        xmlns:doc="http://osafoundation.org/samples/amazon/schema"
        xmlns:content="http://osafoundation.org/parcels/osaf/contentmodel">

  <namespace value="http://osafoundation.org/samples/amazon/schema"/>
  <displayName>Start Here Example</displayName>
  <description>This is an amazon parcel for writing schemas</description>


  <!-- <version>0.1</version> -->

  <!-- Attributes that exist on all Kinds in this file -->
  <Attribute itsName="attr1">
    <displayName>Attribute 1</displayName>
    <cardinality>single</cardinality>
    <type itemref="String"/>
  </Attribute>

  <!-- Kind: Kind1 -->

  <Kind itsName="AmazonCollection">
    <superKinds itemref="content:ItemCollection"/>
    <!-- <classes key="python">samples.amazon.AmazonCollection</classes> -->
    
    <displayName>Amazon Collection Kind</displayName>

    <classes key="python">osaf.examples.amazon.AmazonKinds.AmazonCollection</classes>
    <!-- Attributes unique to this kind -->
    
    <!-- first declare the attribute -->
    <Attribute itsName="keywords">
      <displayName>Keywords</displayName>
      <cardinality>single</cardinality>
      <type itemref="String"/>
    </Attribute>
  
  </Kind>  


  <Kind itsName="AmazonItem">
    <superKinds itemref="content:ContentItem" />
    <displayName>Amazon Item</displayName>
    
    <classes key="python">osaf.examples.amazon.AmazonKinds.AmazonItem</classes>
    <!-- define new attributes -->
    <Attribute itsName="amazonCollection">
      <displayName>Amazon Collection</displayName>
      <cardinality>single</cardinality>
      <type itemref="doc:AmazonCollection" />
    </Attribute>
    
    <Attribute itsName="ProductName">
      <displayName>Product Name</displayName>
      <cardinality>single</cardinality>
      <type itemref="String" />
    </Attribute>
    
    <Attribute itsName="Author">
      <displayName>Author(s)</displayName>
      <cardinality>single</cardinality>
      <type itemref="String" />
    </Attribute>
    
<Attribute itsName="ReleaseDate">
      <displayName>Release Date</displayName>
      <cardinality>single</cardinality>
      <type itemref="String" />
    </Attribute>
    
    <Attribute itsName="imageURL">
      <displayName>image path</displayName>
      <cardinality>single</cardinality>
      <type itemref="String" />
    </Attribute>

    <Attribute itsName="about">
      <redirectTo value="ProductName"/>
    </Attribute>
    
    <Attribute itsName="who">
      <redirectTo value="Author"/>
    </Attribute>
        
    <Attribute itsName="date">
      <redirectTo value="ReleaseDate"/>
    </Attribute>
        
  </Kind>
    
    
</Parcel>
