<Parcel itsName="views"
        describes="//parcels/osaf/examples/stockquote"
        xmlns="http://osafoundation.org/parcels/core"
        xmlns:blocks="http://osafoundation.org/parcels/osaf/framework/blocks"
        xmlns:views="http://osafoundation.org/parcels/osaf/examples/stockquote/views"
        itemClass="osaf.examples.stockquote.StockQuote.StockQuoteViewParcel">

  <!-- The main block for the view: -->

  <blocks:BoxContainer itsName="StockQuoteView"
        itemClass="osaf.examples.stockquote.StockQuote.StockQuoteView">

    <displayName>Stock Quote</displayName>
    <childrenBlocks itemref="views:StockQuoteView/TitleLabel"/>
    <childrenBlocks itemref="views:StockQuoteView/layout"/>
    <orientationEnum>Vertical</orientationEnum>
    <isShown>True</isShown>
    <size>0,0</size>
    <minimumSize>0,0</minimumSize>

    <subscribeWhenVisibleEvents itemref="views:GetQuoteEvent"/>

    <blocks:BoxContainer itsName="layout">
      <childrenBlocks itemref="views:StockQuoteView/GetQuoteButton"/>
      <childrenBlocks itemref="views:StockQuoteView/SymbolText"/>
      <childrenBlocks itemref="views:StockQuoteView/ValueLabel"/>
      <orientationEnum>Horizontal</orientationEnum>
      <isShown>True</isShown>
      <size>0,0</size>
      <minimumSize>0,0</minimumSize>
    </blocks:BoxContainer>

    <!-- The button -->

    <blocks:Button itsName="GetQuoteButton">
      <title>Get Quote</title>
      <buttonKind>Text</buttonKind>
      <event itemref="views:GetQuoteEvent"/>
      <isShown>True</isShown>
      <size>100,24</size>
      <minimumSize>100,24</minimumSize>
      <alignmentEnum>alignCenter</alignmentEnum>
      <stretchFactor>0.0</stretchFactor>
    </blocks:Button>

    <!-- The text box -->

    <blocks:EditText itsName="SymbolText">
      <lineStyleEnum>SingleLine</lineStyleEnum>
      <textAlignmentEnum>Left</textAlignmentEnum>
      <textStyleEnum>PlainText</textStyleEnum>
      <readOnly>False</readOnly>
      <characterStyle itemref="views:StockQuoteView/TextStyle"/>
      <!-- XXX Should somehow set a default value here -->
      <isShown>True</isShown>
      <size>100,24</size>
      <minimumSize>100,24</minimumSize>
      <alignmentEnum>alignCenter</alignmentEnum>
      <stretchFactor>0.0</stretchFactor>
    </blocks:EditText>

    <!-- The value label -->
    <blocks:StaticText itsName="ValueLabel">
      <textAlignmentEnum>Left</textAlignmentEnum>
      <characterStyle itemref="views:StockQuoteView/TextStyle"/>
      <title>$</title>
      <size>100,24</size>
      <minimumSize>100,24</minimumSize>
      <border>3.0, 3.0, 3.0, 3.0</border>
      <alignmentEnum>alignCenter</alignmentEnum>
      <stretchFactor>0.0</stretchFactor>
    </blocks:StaticText>  

    <!-- The Title Label -->
    <blocks:StaticText itsName="TitleLabel">
      <textAlignmentEnum>Center</textAlignmentEnum>
      <characterStyle itemref="views:StockQuoteView/TitleStyle"/>
      <title>Web Services Sample Parcel</title>
      <size>160,40</size>
      <minimumSize>160,40</minimumSize>
      <border>3.0, 3.0, 3.0, 3.0</border>
      <stretchFactor>0.0</stretchFactor>
    </blocks:StaticText>  

    <!-- A style for normal text -->
    <blocks:CharacterStyle itsName="TextStyle">
      <fontFamily>DefaultUIFont</fontFamily>
      <fontSize>10.0</fontSize>
      <fontStyle></fontStyle>
      <fontName></fontName>
    </blocks:CharacterStyle>

    <!-- A style for title text -->
    <blocks:CharacterStyle itsName="TitleStyle">
      <fontFamily>DefaultUIFont</fontFamily>
      <fontSize>16.0</fontSize>
      <fontStyle>bold</fontStyle>
      <fontName></fontName>
    </blocks:CharacterStyle>

  </blocks:BoxContainer>

  <!-- The event that the button fires -->

  <blocks:BlockEvent itsName="GetQuoteEvent">
    <dispatchEnum>SendToBlock</dispatchEnum>
    <dispatchToBlock itemref="views:StockQuoteView"/>
    <methodName>OnGetQuoteEvent</methodName>
  </blocks:BlockEvent>

  <!-- The node that is added to the side bar -->

  <blocks:Node itsName="StockQuoteViewNode">
    <displayName>Stock Quote</displayName>
    <item itemref="views:StockQuoteView"/>
  </blocks:Node>

</Parcel>
