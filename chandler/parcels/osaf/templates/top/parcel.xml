<core:Parcel describes="//parcels/OSAF/templates/top"
             itemName="top"
             xmlns:core="//Schema/Core"
             xmlns="//parcels/OSAF/framework/blocks"
             xmlns:doc="//parcels/OSAF/templates/top"
             xmlns:events="//parcels/OSAF/framework/blocks/events">

  <core:version>0.3</core:version>

  <Query itemName="myQuery">
    <queryEnum>listOfItems</queryEnum>
    <data></data>
  </Query>

  <!--
    Menus
  -->
  <Menu itemName="FileMenu">
    <title>File</title>
    <operation>InsertBefore</operation>
    <menuLocation></menuLocation>
    <itemLocation></itemLocation>
  </Menu>

  <Menu itemName="EditMenu">
    <title>Edit</title>
    <operation>InsertBefore</operation>
    <menuLocation></menuLocation>
    <itemLocation></itemLocation>
  </Menu>
  
  <!--
    Menu Items
  -->
  <MenuItem itemName="QuitItem">
    <title>Quit</title>
    <operation>InsertBefore</operation>
    <menuLocation>FileMenu</menuLocation>
    <itemLocation></itemLocation>
    <menuItemKind>Normal</menuItemKind>
    <accel>Q</accel>
    <helpString>Quit Chandler</helpString>
    <event itemref="events:Quit"/>
  </MenuItem>
  
  <MenuItem itemName="UndoItem">
    <title>Undo</title>
    <operation>InsertBefore</operation>
    <menuLocation>EditMenu</menuLocation>
    <itemLocation></itemLocation>
    <operation>InsertBefore</operation>
    <menuItemKind>Normal</menuItemKind>
    <accel>Z</accel>
    <helpString></helpString>
    <event itemref="events:Undo"/>
  </MenuItem>

  <MenuItem itemName="RedoItem">
    <title>Redo</title>
    <operation>InsertBefore</operation>
    <menuLocation>EditMenu</menuLocation>
    <itemLocation></itemLocation>
    <menuItemKind>Normal</menuItemKind>
    <accel>Y</accel>
    <helpString></helpString>
    <event itemref="events:Redo"/>
  </MenuItem>

  <MenuItem itemName="EditSeparator1">
    <title></title>
    <operation>InsertBefore</operation>
    <menuLocation>EditMenu</menuLocation>
    <itemLocation></itemLocation>
    <menuItemKind>Separator</menuItemKind>
    <accel></accel>
    <helpString></helpString>
  </MenuItem>
  
  <MenuItem itemName="CutItem">
    <title>Cut</title>
    <operation>InsertBefore</operation>
    <menuLocation>EditMenu</menuLocation>
    <itemLocation></itemLocation>
    <menuItemKind>Normal</menuItemKind>
    <accel>X</accel>
    <helpString></helpString>
    <event itemref="events:Cut"/>
  </MenuItem>

  <MenuItem itemName="CopyItem">
    <title>Copy</title>
    <operation>InsertBefore</operation>
    <menuLocation>EditMenu</menuLocation>
    <itemLocation></itemLocation>
    <menuItemKind>Normal</menuItemKind>
    <accel>C</accel>
    <helpString></helpString>
    <event itemref="events:Copy"/>
  </MenuItem>

  <MenuItem itemName="PasteItem">
    <title>Paste</title>
    <operation>InsertBefore</operation>
    <menuLocation>EditMenu</menuLocation>
    <itemLocation></itemLocation>
    <menuItemKind>Normal</menuItemKind>
    <accel>V</accel>
    <helpString></helpString>
    <event itemref="events:Paste"/>
  </MenuItem>
  
  <MenuItem itemName="EditSeparator2">
    <title></title>
    <operation>InsertBefore</operation>
    <menuLocation>EditMenu</menuLocation>
    <itemLocation></itemLocation>
    <menuItemKind>Separator</menuItemKind>
    <accel></accel>
    <helpString></helpString>
  </MenuItem>
  
  <MenuItem itemName="PreferencesItem">
    <title>Preferences</title>
    <operation>InsertBefore</operation>
    <menuLocation>EditMenu</menuLocation>
    <itemLocation></itemLocation>
    <menuItemKind>Normal</menuItemKind>
    <accel></accel>
    <event itemref="events:Preferences"/>
    <helpString></helpString>
  </MenuItem>
  
  <CharacterStyle itemName="HeaderCharacterStyle">
    <fontFamily>DefaultUIFont</fontFamily>
    <fontSize>12.0</fontSize>
    <fontStyle>bold</fontStyle>
    <fontName></fontName>
  </CharacterStyle>

  <Controller itemName="Controller">
  </Controller>

  <StaticText itemName="Header">
    <open>True</open>

    <size>100,20</size>
    <minimumSize>100,20</minimumSize>
    <border>3.0, 3.0, 3.0, 3.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>0.0</stretchFactor>
    <textAlignmentEnum>Left</textAlignmentEnum>
    <characterStyle itemref="doc:HeaderCharacterStyle"/>
    <title>Repository Viewer</title>
  </StaticText>
  
  <TreeList itemName="TreeList">
    <columnHeadings>Item Name</columnHeadings>
    <columnHeadings>Display Name</columnHeadings>
    <columnHeadings>Kind</columnHeadings>
    <columnHeadings>UUID</columnHeadings>
    <columnHeadings></columnHeadings>
    <columnHeadings>URL</columnHeadings>
    
    <columnWidths>80</columnWidths>
    <columnWidths>80</columnWidths>
    <columnWidths>80</columnWidths>
    <columnWidths>120</columnWidths>
    <columnWidths>10</columnWidths>
    <columnWidths>120</columnWidths>
    <size>600,200</size>
    <minimumSize>400,100</minimumSize>
    <border>3.0, 3.0, 3.0, 3.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>1.0</stretchFactor>
  </TreeList>
 
  <CharacterStyle itemName="TextStyle">
    <fontFamily>DefaultUIFont</fontFamily>
    <fontSize>10.0</fontSize>
    <fontStyle></fontStyle>
    <fontName></fontName>
  </CharacterStyle>

  <MenuItem itemName="LeftMenuItem">
    <title>Left</title>
    <operation>InsertBefore</operation>
    <menuLocation>EditMenu</menuLocation>
    <itemLocation></itemLocation>
    <menuItemKind>Normal</menuItemKind>
    <accel></accel>
    <event itemref="events:Left"/>
    <helpString></helpString>
  </MenuItem>
  
  <EditText itemName="LeftText">
    <childrenBlocks itemref="doc:LeftMenuItem"/>
    <open>True</open>

    <size>100,20</size>
    <minimumSize>100,20</minimumSize>
    <border>3.0, 3.0, 3.0, 3.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>0.0</stretchFactor>
    <textAlignmentEnum>Left</textAlignmentEnum>
    <lineStyleEnum>SingleLine</lineStyleEnum>
    <textStyleEnum>PlainText</textStyleEnum>
    <readOnly>False</readOnly>
    <characterStyle itemref="doc:TextStyle"/>readOnly
  </EditText>
  
  <MenuItem itemName="RightMenuItem">
    <title>Right</title>
    <operation>InsertBefore</operation>
    <menuLocation>EditMenu</menuLocation>
    <itemLocation></itemLocation>
    <menuItemKind>Normal</menuItemKind>
    <accel></accel>
    <event itemref="events:Right"/>
    <helpString></helpString>
  </MenuItem>
  
  <EditText itemName="RightText">
    <childrenBlocks itemref="doc:RightMenuItem"/>
    <open>True</open>

    <size>100,20</size>
    <minimumSize>100,20</minimumSize>
    <border>3.0, 3.0, 3.0, 3.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>0.0</stretchFactor>
    <textAlignmentEnum>Left</textAlignmentEnum>
    <characterStyle itemref="doc:TextStyle"/>
    <lineStyleEnum>SingleLine</lineStyleEnum>
    <textStyleEnum>PlainText</textStyleEnum>
    <readOnly>False</readOnly>
  </EditText>
  
  <BoxContainer itemName="LeftBox">
    <content-spec itemref="doc:myQuery"/>
    <childrenBlocks itemref="doc:LeftText"/>
    <open>True</open>

    <size>200,100</size>
    <minimumSize>200,100</minimumSize>
    <border>2.0, 2.0, 2.0, 2.0</border>
    <alignmentEnum>alignCenter</alignmentEnum>
    <stretchFactor>1.0</stretchFactor>

    <orientationEnum>Horizontal</orientationEnum>
  </BoxContainer>

  <BoxContainer itemName="RightBox">
    <content-spec itemref="doc:myQuery"/>
    <childrenBlocks itemref="doc:RightText"/>
    <open>True</open>

    <size>200,100</size>
    <minimumSize>200,100</minimumSize>
    <border>2.0, 2.0, 2.0, 2.0</border>
    <alignmentEnum>alignCenter</alignmentEnum>
    <stretchFactor>1.0</stretchFactor>

    <orientationEnum>Horizontal</orientationEnum>
  </BoxContainer>

  <BoxContainer itemName="ContentBox">
    <content-spec itemref="doc:myQuery"/>
    <childrenBlocks itemref="doc:LeftBox"/>
    <childrenBlocks itemref="doc:RightBox"/>
    <open>True</open>

    <size>200,100</size>
    <minimumSize>200,100</minimumSize>
    <border>2.0, 2.0, 2.0, 2.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>1.0</stretchFactor>

    <orientationEnum>Horizontal</orientationEnum>
  </BoxContainer>

  <BoxContainer itemName="TopDocument">
    <content-spec itemref="doc:myQuery"/>
    <childrenBlocks itemref="doc:FileMenu"/>
    <childrenBlocks itemref="doc:QuitItem"/>

    <childrenBlocks itemref="doc:EditMenu"/>
    <childrenBlocks itemref="doc:UndoItem"/>
    <childrenBlocks itemref="doc:RedoItem"/>
    <childrenBlocks itemref="doc:EditSeparator1"/>
    <childrenBlocks itemref="doc:CutItem"/>
    <childrenBlocks itemref="doc:CopyItem"/>
    <childrenBlocks itemref="doc:PasteItem"/>
    <childrenBlocks itemref="doc:EditSeparator2"/>
    <childrenBlocks itemref="doc:PreferencesItem"/>

    <childrenBlocks itemref="doc:Header"/>
    <childrenBlocks itemref="doc:ContentBox"/>
    <childrenBlocks itemref="doc:Controller"/>
    <open>True</open>

    <size>400,200</size>
    <minimumSize>400,200</minimumSize>
    <border>10.0, 10.0, 10.0, 10.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>1.0</stretchFactor>

    <orientationEnum>Vertical</orientationEnum>
  </BoxContainer>

</core:Parcel>
