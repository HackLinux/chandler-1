<core:Parcel describes="//parcels/OSAF/templates/top"
             itemName="top"
             xmlns:core="//Schema/Core"
             xmlns="//parcels/OSAF/framework/blocks"
             xmlns:doc="//parcels/OSAF/templates/top"
             xmlns:events="//parcels/OSAF/framework/blocks/events">

  <core:version>0.3</core:version>

  <Query itemName="myQuery">
    <queryEnum>listOfItems</queryEnum>
    <data></data>
  </Query>

  <MenuItem itemName="QuitItem">
    <title>Quit</title>
    <menuItemKind>Normal</menuItemKind>
    <accel>Q</accel>
    <helpString>Quit Chandler</helpString>
    <event itemref="events:Quit"/>
  </MenuItem>
  
  <MenuItem itemName="UndoItem">
    <title>Undo</title>
    <menuItemKind>Normal</menuItemKind>
    <accel>Z</accel>
    <helpString></helpString>
    <event itemref="events:Undo"/>
  </MenuItem>

  <MenuItem itemName="RedoItem">
    <title>Redo</title>
    <menuItemKind>Normal</menuItemKind>
    <accel>Y</accel>
    <helpString></helpString>
    <event itemref="events:Redo"/>
  </MenuItem>

  <MenuItem itemName="CutItem">
    <title>Cut</title>
    <menuItemKind>Normal</menuItemKind>
    <accel>X</accel>
    <helpString></helpString>
    <event itemref="events:Cut"/>
  </MenuItem>

  <MenuItem itemName="CopyItem">
    <title>Copy</title>
    <menuItemKind>Normal</menuItemKind>
    <accel>C</accel>
    <helpString></helpString>
    <event itemref="events:Copy"/>
  </MenuItem>

  <MenuItem itemName="PasteItem">
    <title>Paste</title>
    <menuItemKind>Normal</menuItemKind>
    <accel>V</accel>
    <helpString></helpString>
    <event itemref="events:Paste"/>
  </MenuItem>
  
  <MenuItem itemName="Separator">
    <title></title>
    <menuItemKind>Separator</menuItemKind>
    <accel></accel>
    <helpString></helpString>
  </MenuItem>
  
  <MenuItem itemName="Preferences">
    <title>Preferences</title>
    <menuItemKind>Normal</menuItemKind>
    <accel></accel>
    <helpString></helpString>
  </MenuItem>
  
  <Menu itemName="FileMenu">
    <childrenBlocks itemref="doc:QuitItem"/>
    <title>File</title>
  </Menu>

  <Menu itemName="EditMenu">
    <childrenBlocks itemref="doc:UndoItem"/>
    <childrenBlocks itemref="doc:RedoItem"/>
    <childrenBlocks itemref="doc:CutItem"/>
    <childrenBlocks itemref="doc:CopyItem"/>
    <childrenBlocks itemref="doc:PasteItem"/>
    <childrenBlocks itemref="doc:Separator"/>
    <childrenBlocks itemref="doc:Preferences"/>
    <title>Edit</title>
  </Menu>
  
  <CharacterStyle itemName="HeaderCharacterStyle">
    <fontFamily>DefaultUIFont</fontFamily>
    <fontSize>12.0</fontSize>
    <fontStyle>bold</fontStyle>
    <fontName></fontName>
  </CharacterStyle>

  <Controller itemName="Controller">
  </Controller>

  <StaticText itemName="Header">
    <open>True</open>

    <size>100,20</size>
    <minimumSize>100,20</minimumSize>
    <border>3.0, 3.0, 3.0, 3.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>0.0</stretchFactor>
    <alignment>Left</alignment>
    <characterStyle itemref="doc:HeaderCharacterStyle"/>
    <title>Repository Viewer</title>
  </StaticText>
  
  <TreeList itemName="TreeList">
    <columnHeadings>Item Name</columnHeadings>
    <columnHeadings>Display Name</columnHeadings>
    <columnHeadings>Kind</columnHeadings>
    <columnHeadings>UUID</columnHeadings>
    <columnHeadings></columnHeadings>
    <columnHeadings>URL</columnHeadings>
    
    <columnWidths>80</columnWidths>
    <columnWidths>80</columnWidths>
    <columnWidths>80</columnWidths>
    <columnWidths>120</columnWidths>
    <columnWidths>10</columnWidths>
    <columnWidths>120</columnWidths>
    <size>600,200</size>
    <minimumSize>400,100</minimumSize>
    <border>3.0, 3.0, 3.0, 3.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>1.0</stretchFactor>
  </TreeList>

  <BoxContainer itemName="TopDocument">
    <content-spec itemref="doc:myQuery"/>
    <childrenBlocks itemref="doc:FileMenu"/>
    <childrenBlocks itemref="doc:EditMenu"/>
    <childrenBlocks itemref="doc:Header"/>
    <childrenBlocks itemref="doc:TreeList"/>
    <childrenBlocks itemref="doc:Controller"/>
    <open>True</open>

    <size>400,200</size>
    <minimumSize>400,200</minimumSize>
    <border>10.0, 10.0, 10.0, 10.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>1.0</stretchFactor>

    <orientationEnum>Vertical</orientationEnum>
  </BoxContainer>

</core:Parcel>
