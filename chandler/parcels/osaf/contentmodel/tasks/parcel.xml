<Parcel describes="//parcels/OSAF/contentmodel/tasks"
        itemName="tasks"
        xmlns="//Schema/Core"
        xmlns:pim="//parcels/OSAF/contentmodel"
        xmlns:contact="//parcels/OSAF/contentmodel/contacts"
        xmlns:calendar="//parcels/OSAF/contentmodel/calendar"
        xmlns:task="//parcels/OSAF/contentmodel/tasks">

  <displayName>Task</displayName>
  <version>0.3</version>
  <description>...add comment here...</description>

<!-- Task -->
  <Attribute itemName="name">
    <displayName>name</displayName>
    <description>...add description here...</description>
    <cardinality>single</cardinality>
    <type itemref="String"/>
  </Attribute>

  <Attribute itemName="notes">
    <displayName>notes</displayName>
    <description>...add description here...</description>
    <cardinality>single</cardinality>
    <type itemref="String"/>
  </Attribute>

  <Attribute itemName="timeFrame">
    <displayName>time frame</displayName>
    <description>'short term' or 'long term'</description>
    <cardinality>single</cardinality>
    <type itemref="Boolean"/>
  </Attribute>

  <Attribute itemName="reminders">
    <displayName>reminder</displayName>
    <description>...add description here...</description>
    <cardinality>set</cardinality>
    <type itemref="calendar:Reminder"/>
  </Attribute>

  <Attribute itemName="superTask">
    <displayName>super-task</displayName>
    <description>...add description here...</description>
    <cardinality>single</cardinality>
    <type itemref="task:Task"/>
  </Attribute>

  <Attribute itemName="subTasks">
    <displayName>sub-tasks</displayName>
    <description>...add description here...</description>
    <cardinality>list</cardinality>
    <type itemref="task:Task"/>
  </Attribute>

  <Attribute itemName="requiredResources">
    <displayName>required resources</displayName>
    <description>examples: 'hammer', 'ladder', 'flashlight'</description>
    <cardinality>list</cardinality>
    <type itemref="String"/>
  </Attribute>

  <Attribute itemName="dependencies">
    <displayName>dependencies</displayName>
    <description>tasks that are preconditions for this task</description>
    <cardinality>set</cardinality>
    <type itemref="task:Task"/>
  </Attribute>

  <Attribute itemName="dependentTasks">
    <displayName>dependent tasks</displayName>
    <description>tasks that this task is a precondition for</description>
    <cardinality>set</cardinality>
    <type itemref="task:Task"/>
  </Attribute>

  <Attribute itemName="priority">
    <displayName>priority</displayName>
    <description>...add description here...</description>
    <cardinality>single</cardinality>
    <type itemref="task:PriorityLevel"/>
  </Attribute>

  <Attribute itemName="status">
    <displayName>status</displayName>
    <description>...add description here...</description>
    <cardinality>single</cardinality>
    <type itemref="task:Status"/>
  </Attribute>

  <Attribute itemName="workLocation">
    <displayName>work location</displayName>
    <description>examples: 'work' or 'home'</description>
    <cardinality>single</cardinality>
    <type itemref="String"/>
  </Attribute>

  <Attribute itemName="dueDate">
    <displayName>due date</displayName>
    <description>...add description here...</description>
    <cardinality>single</cardinality>
    <type itemref="DateTime"/>
  </Attribute>

  <Attribute itemName="planToDoOnDate">
    <displayName>plan to do on date</displayName>
    <description>...add description here...</description>
    <cardinality>single</cardinality>
    <type itemref="DateTime"/>
  </Attribute>

  <Attribute itemName="tentativeStartDate">
    <displayName>tentative start date</displayName>
    <description>...add description here...</description>
    <cardinality>single</cardinality>
    <type itemref="DateTime"/>
  </Attribute>

  <Attribute itemName="timeEstimate">
    <displayName>time estimate</displayName>
    <description>...add description here...</description>
    <cardinality>single</cardinality>
    <type itemref="task:TimeEstimate"/>
  </Attribute>

  <Attribute itemName="taskType">
    <displayName>task type</displayName>
    <description>...add description here...</description>
    <cardinality>single</cardinality>
    <type itemref="task:TaskType"/>
  </Attribute>

  <Attribute itemName="delegation">
    <displayName>delegation</displayName>
    <description>...add description here...</description>
    <cardinality>single</cardinality>
    <type itemref="task:Delegation"/>
  </Attribute>

  <Kind itemName="Task">
    <displayName>Task</displayName>
    <issues>possible alternate names: 'Action Item' or 'To Do Item'</issues>
    <issues>see also: TaskDataModelIssues</issues>
    <superKinds itemref="pim:ContentItem"/>
    <attributes itemref="task:name"/>
    <attributes itemref="task:notes"/>
    <attributes itemref="task:timeFrame"/>
    <attributes itemref="task:reminders"/>
    <attributes itemref="task:superTask"/>
    <attributes itemref="task:subTasks"/>
    <attributes itemref="task:requiredResources"/>
    <attributes itemref="task:dependencies"/>
    <attributes itemref="task:dependentTasks"/>
    <attributes itemref="task:priority"/>
    <attributes itemref="task:status"/>
    <attributes itemref="task:workLocation"/>
    <attributes itemref="task:dueDate"/>
    <attributes itemref="task:planToDoOnDate"/>
    <attributes itemref="task:tentativeStartDate"/>
    <attributes itemref="task:timeEstimate"/>
    <attributes itemref="task:taskType"/>
    <attributes itemref="task:delegation"/>
  </Kind>

<!-- Task List -->
  <Kind itemName="TaskList">
    <displayName>Task List</displayName>
    <superKinds itemref="Item"/>
  </Kind>

<!-- Time Estimate -->
  <Attribute itemName="estimatedTime">
    <displayName>estimated time</displayName>
    <description>...add description here...</description>
    <cardinality>single</cardinality>
    <type itemref="DateTimeDelta"/>
  </Attribute>

  <Attribute itemName="estimatedBy">
    <displayName>estimated by</displayName>
    <description>...add description here...</description>
    <cardinality>single</cardinality>
    <type itemref="contact:Contact"/>
  </Attribute>

  <Attribute itemName="confidence">
    <displayName>confidence</displayName>
    <description>...add description here...</description>
    <cardinality>single</cardinality>
    <type itemref="String"/>
  </Attribute>

  <Attribute itemName="percentComplete">
    <displayName>percent complete</displayName>
    <description>...add description here...</description>
    <cardinality>single</cardinality>
    <type itemref="Integer"/>
  </Attribute>

  <Attribute itemName="actualTime">
    <displayName>actual time</displayName>
    <description>...add description here...</description>
    <cardinality>single</cardinality>
    <type itemref="DateTimeDelta"/>
  </Attribute>

  <Kind itemName="TimeEstimate">
    <displayName>Time Estimate</displayName>
    <examples>'2 days'</examples>
    <examples>'1 hour'</examples>
    <superKinds itemref="Item"/>
    <attributes itemref="task:estimatedTime"/>
    <attributes itemref="task:estimatedBy"/>
    <attributes itemref="task:confidence"/>
    <attributes itemref="task:percentComplete"/>
    <attributes itemref="task:actualTime"/>
  </Kind>

<!-- Delegation -->
  <Attribute itemName="assignedBy">
    <displayName>assigned by</displayName>
    <description>@@@ -- should be Person or Agent</description>
    <cardinality>single</cardinality>
    <type itemref="contact:Contact"/>
  </Attribute>

  <Attribute itemName="assignedTo">
    <displayName>assigned to</displayName>
    <description>@@@ -- should be Person or Group</description>
    <cardinality>single</cardinality>
    <type itemref="contact:Contact"/>
  </Attribute>

  <Attribute itemName="furtherDelegation">
    <displayName>further delegation</displayName>
    <description>...add description here...</description>
    <cardinality>single</cardinality>
    <type itemref="task:Delegation"/>
  </Attribute>

  <Kind itemName="Delegation">
    <displayName>Delegation</displayName>
    <superKinds itemref="Item"/>
    <attributes itemref="task:assignedBy"/>
    <attributes itemref="task:assignedTo"/>
    <attributes itemref="task:furtherDelegation"/>
  </Kind>

<!-- Status -->
  <Attribute itemName="subStatus">
    <displayName>sub-status</displayName>
    <description>...add description here...</description>
    <cardinality>set</cardinality>
    <type itemref="task:Status"/>
  </Attribute>

  <Attribute itemName="superStatus">
    <displayName>super-status</displayName>
    <description>...add description here...</description>
    <cardinality>single</cardinality>
    <type itemref="task:Status"/>
  </Attribute>

  <Kind itemName="Status">
    <displayName>Status</displayName>
    <examples>'Open'</examples>
    <examples>'Closed'</examples>
    <examples>'Completed'</examples>
    <examples>'Underway'</examples>
    <examples>'Waiting on...'</examples>
    <superKinds itemref="Item"/>
    <attributes itemref="task:name"/>
    <attributes itemref="task:subStatus"/>
    <attributes itemref="task:superStatus"/>
  </Kind>

<!-- Task Type -->
  <Attribute itemName="subTypes">
    <displayName>sub-types</displayName>
    <description>...add description here...</description>
    <cardinality>set</cardinality>
    <type itemref="task:TaskType"/>
  </Attribute>

  <Attribute itemName="superType">
    <displayName>super-type</displayName>
    <description>...add description here...</description>
    <cardinality>single</cardinality>
    <type itemref="task:TaskType"/>
  </Attribute>

  <Kind itemName="TaskType">
    <displayName>Task Type</displayName>
    <examples>'Phone call'</examples>
    <examples>'Errand'</examples>
    <examples>'Send e-mail'</examples>
    <superKinds itemref="Item"/>
    <attributes itemref="task:name"/>
    <attributes itemref="task:subTypes"/>
    <attributes itemref="task:superType"/>
  </Kind>

<!-- Priority Level -->
  <Kind itemName="PriorityLevel">
    <displayName>Priority Level</displayName>
    <superKinds itemref="Item"/>
  </Kind>

</Parcel>