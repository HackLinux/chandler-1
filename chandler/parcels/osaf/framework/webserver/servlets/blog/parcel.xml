<?xml version="1.0" encoding="iso-8859-1"?>

<Parcel itsName="blog"
        xmlns="http://osafoundation.org/parcels/core"
        xmlns:cm="http://osafoundation.org/parcels/osaf/contentmodel"
        xmlns:web="http://osafoundation.org/parcels/osaf/framework/webserver"
        xmlns:serv="http://osafoundation.org/parcels/osaf/framework/webserver/servers"
        xmlns:me="http://osafoundation.org/parcels/osaf/framework/webserver/servlets/blog" >

    <Kind itsName="BlogEntryMixin">
        <displayName value="Blog Entry Mixin" />
        <Attribute itsName="caption">
            <cardinality value="single"/>
            <type itemref="String"/>
            <initialValue itemref="None"/>
        </Attribute>
        <Attribute itsName="about">
            <redirectTo value="caption" />
        </Attribute>
    </Kind>

    <Kind itsName="BlogEntry">
        <displayName value="Blog Entry" />
        <superKinds itemref="me:BlogEntryMixin"/>
        <superKinds itemref="cm:Note"/>
    </Kind>

    <web:Resource itsName="blogResource">
        <displayName value="Blog Servlet"/>
        <location value="blog"/>
        <resourceClass value="osaf.framework.webserver.servlets.blog.Blog.BlogResource"/>
        <server itemref="serv:mainServer"/>
    </web:Resource>

</Parcel>
