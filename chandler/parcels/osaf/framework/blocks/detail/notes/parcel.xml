<core:Parcel describes="//parcels/osaf/framework/blocks/detail/notes"
             itemName="notes"
             xmlns="//parcels/osaf/framework/blocks"
             xmlns:core="//Schema/Core"
             xmlns:blocks="//parcels/osaf/framework/blocks"
             xmlns:content="//parcels/osaf/contentmodel"
             xmlns:detail="//parcels/osaf/framework/blocks/detail"
             xmlns:doc="//parcels/osaf/framework/blocks/detail/notes">

  <core:version>0.3</core:version>

  <!--
    Layout blocks
  -->
  
  <!-- Root -->
  <ContentItemDetail itemName="DetailRoot">
    <childrenBlocks itemref="doc:MarkupBar"/>
    <childrenBlocks itemref="doc:FromAndToArea"/>
    <childrenBlocks itemref="doc:CoreIndent"/>
    <childrenBlocks itemref="doc:StampedEmailArea"/>
    <childrenBlocks itemref="doc:NotesArea"/>
    <childrenBlocks itemref="doc:MessagesArea"/>
    <childrenBlocks itemref="doc:SharingBar"/>
    <childrenBlocks itemref="doc:LabelingArea"/>
     <!-- Attributes -->
    <orientationEnum>Vertical</orientationEnum>
    <size>80,20</size>
    <minimumSize>80,40</minimumSize>
  </ContentItemDetail>

  <!-- MarkupBar -->
  <detail:MarkupBar itemName="MarkupBar">
    <childrenBlocks itemref="doc:TriageButton"/>
    <childrenBlocks itemref="doc:Triage"/>
    <childrenBlocks itemref="doc:SharingButton"/>
    <childrenBlocks itemref="doc:TaskButton"/>
    <childrenBlocks itemref="doc:CalendarButton"/>
    <childrenBlocks itemref="doc:Spacer1"/>
    <childrenBlocks itemref="doc:NeedsReplyButton"/>
    <childrenBlocks itemref="doc:Spacer2"/>
    <childrenBlocks itemref="doc:OutboxFlag"/>
    <childrenBlocks itemref="doc:RepliedFlag"/>
    <childrenBlocks itemref="doc:ForwardedFlag"/>
    <childrenBlocks itemref="doc:RedirectedFlag"/>
    <childrenBlocks itemref="doc:DraftFlag"/>
    <childrenBlocks itemref="doc:QueuedFlag"/>
    <childrenBlocks itemref="doc:Spacer3"/>
    <childrenBlocks itemref="doc:PrivateButton"/>
    <!-- Attributes -->
    <colorStyle itemref="detail:GrayBackground3"/>
    <toolSize>16,16</toolSize>
  </detail:MarkupBar>

  <!--
    ToolbarItems
  -->
  <ToolbarItem itemName="TriageButton">
    <!-- Attributes -->
    <toolbarLocation itemref="doc:MarkupBar"/>
    <title>Triage</title>
    <bitmap>application/images/triage.png</bitmap>
    <selectedBitmap></selectedBitmap>
    <toolbarItemKind>Button</toolbarItemKind>
    <statusMessage>Decide when to do...</statusMessage>
  </ToolbarItem>

  <ToolbarItem itemName="Triage">
    <!-- Attributes -->
    <toolbarLocation itemref="doc:MarkupBar"/>
    <title>Triage</title>
    <toolbarItemKind>Combo</toolbarItemKind>
    <statusMessage>Mark Item to be done now or later, etc</statusMessage>
    <prototype itemref="doc:TriageCombo"/>
  </ToolbarItem>
  
  <ComboBox itemName="TriageCombo">
    <selection>Processing</selection>
    <choices>Processing</choices>
    <choices>Defered until</choices>
    <choices>Processed</choices>
  </ComboBox>
  
  <ToolbarItem itemName="SharingButton">
    <!-- Attributes -->
    <toolbarLocation itemref="doc:MarkupBar"/>
    <title>Sharing</title>
    <bitmap>application/images/sharing.png</bitmap>
    <toolbarItemKind>Button</toolbarItemKind>
    <statusMessage>Enable sharing</statusMessage>
  </ToolbarItem>

  <ToolbarItem itemName="TaskButton">
    <!-- Attributes -->
    <toolbarLocation itemref="doc:MarkupBar"/>
    <title>Task</title>
    <bitmap>application/images/task.png</bitmap>
    <toolbarItemKind>Button</toolbarItemKind>
    <statusMessage>Make into a Task</statusMessage>
  </ToolbarItem>

  <ToolbarItem itemName="CalendarButton">
    <!-- Attributes -->
    <toolbarLocation itemref="doc:MarkupBar"/>
    <title>Calendar</title>
    <bitmap>application/images/calendar.png</bitmap>
    <toolbarItemKind>Button</toolbarItemKind>
    <statusMessage>Put onto the Calendar</statusMessage>
  </ToolbarItem>

  <ToolbarItem itemName="Spacer1">
    <!-- Attributes -->
    <toolbarLocation itemref="doc:MarkupBar"/>
    <toolbarItemKind>Separator</toolbarItemKind>
  </ToolbarItem>

  <ToolbarItem itemName="NeedsReplyButton">
    <!-- Attributes -->
    <toolbarLocation itemref="doc:MarkupBar"/>
    <title>Needs reply</title>
    <bitmap>application/images/reply.png</bitmap>
    <toolbarItemKind>Button</toolbarItemKind>
    <statusMessage>Needs a reply</statusMessage>
  </ToolbarItem>

  <ToolbarItem itemName="Spacer2">
    <!-- Attributes -->
    <toolbarLocation itemref="doc:MarkupBar"/>
    <toolbarItemKind>Separator</toolbarItemKind>
    <title>4</title>
  </ToolbarItem>

  <ToolbarItem itemName="OutboxFlag">
    <!-- Attributes -->
    <toolbarLocation itemref="doc:MarkupBar"/>
    <title>Outbox</title>
    <bitmap>application/images/outbox.png</bitmap>
    <toolbarItemKind>Button</toolbarItemKind>
    <statusMessage>In the Out box</statusMessage>
  </ToolbarItem>

  <ToolbarItem itemName="RepliedFlag">
    <!-- Attributes -->
    <toolbarLocation itemref="doc:MarkupBar"/>
    <title>Replied</title>
    <bitmap>application/images/replied.png</bitmap>
    <toolbarItemKind>Button</toolbarItemKind>
    <statusMessage>A reply has been sent</statusMessage>
  </ToolbarItem>

  <ToolbarItem itemName="ForwardedFlag">
    <!-- Attributes -->
    <toolbarLocation itemref="doc:MarkupBar"/>
    <title>Forwarded</title>
    <bitmap>application/images/forwarded.png</bitmap>
    <toolbarItemKind>Button</toolbarItemKind>
    <statusMessage>Has been forwarded</statusMessage>
  </ToolbarItem>

  <ToolbarItem itemName="RedirectedFlag">
    <!-- Attributes -->
    <toolbarLocation itemref="doc:MarkupBar"/>
    <title>Redirected</title>
    <bitmap>application/images/redirected.png</bitmap>
    <toolbarItemKind>Button</toolbarItemKind>
    <statusMessage>Message has been redirected</statusMessage>
  </ToolbarItem>

  <ToolbarItem itemName="DraftFlag">
    <!-- Attributes -->
    <toolbarLocation itemref="doc:MarkupBar"/>
    <title>Draft</title>
    <bitmap>application/images/draft.png</bitmap>
    <toolbarItemKind>Button</toolbarItemKind>
    <statusMessage>Message saved as a draft</statusMessage>
  </ToolbarItem>

  <ToolbarItem itemName="QueuedFlag">
    <!-- Attributes -->
    <toolbarLocation itemref="doc:MarkupBar"/>
    <title>Queued</title>
    <bitmap>application/images/queued.png</bitmap>
    <toolbarItemKind>Button</toolbarItemKind>
    <statusMessage>Message has been queued</statusMessage>
  </ToolbarItem>

  <ToolbarItem itemName="Spacer3">
    <!-- Attributes -->
    <toolbarLocation itemref="doc:MarkupBar"/>
    <toolbarItemKind>Separator</toolbarItemKind>
    <title>4</title>
  </ToolbarItem>

  <ToolbarItem itemName="PrivateButton">
    <!-- Attributes -->
    <toolbarLocation itemref="doc:MarkupBar"/>
    <title>Private</title>
    <bitmap>application/images/private.png</bitmap>
    <toolbarItemKind>Button</toolbarItemKind>
    <statusMessage>Make item Private</statusMessage>
  </ToolbarItem>

  <!-- FromAndToArea -->
  <ContentItemDetail itemName="FromAndToArea">
    <childrenBlocks itemref="doc:FromArea"/>
    <childrenBlocks itemref="doc:ToArea"/>
    <!-- Attributes -->
    <orientationEnum>Vertical</orientationEnum>
  </ContentItemDetail>
 
  <ContentItemDetail itemName="FromArea">
    <childrenBlocks itemref="doc:FromString"/>
    <childrenBlocks itemref="doc:FromEditField1"/>
    <!-- Attributes -->
    <orientationEnum>Horizontal</orientationEnum>
  </ContentItemDetail>

  <StaticText itemName="FromString">
    <title>From: </title>
    <characterStyle itemref="detail:LabelStyle"/>
    <textAlignmentEnum>Left</textAlignmentEnum>    
    <stretchFactor>0.0</stretchFactor>
  </StaticText>
  
  <detail:FromEditField itemName="FromEditField1">
    <characterStyle itemref="detail:TextStyle"/>
    <lineStyleEnum>MultiLine</lineStyleEnum>
    <textStyleEnum>PlainText</textStyleEnum>
    <readOnly>True</readOnly>
    <textAlignmentEnum>Left</textAlignmentEnum>
  </detail:FromEditField>

  <ContentItemDetail itemName="ToArea">
    <childrenBlocks itemref="doc:ToString"/>
    <childrenBlocks itemref="doc:ToEditField1"/>
    <!-- Attributes -->
    <orientationEnum>Horizontal</orientationEnum>
  </ContentItemDetail>
 
  <StaticText itemName="ToString">
    <title>To: </title>
    <characterStyle itemref="detail:LabelStyle"/>
    <textAlignmentEnum>Left</textAlignmentEnum>    
    <stretchFactor>0.0</stretchFactor>
  </StaticText>
  
  <detail:ToEditField itemName="ToEditField1">
    <characterStyle itemref="detail:TextStyle"/>
    <lineStyleEnum>MultiLine</lineStyleEnum>
    <textStyleEnum>PlainText</textStyleEnum>
    <readOnly>True</readOnly>
    <textAlignmentEnum>Left</textAlignmentEnum>
  </detail:ToEditField>

  <!-- CoreIndent -->
  <ContentItemDetail itemName="CoreIndent">
    <childrenBlocks itemref="doc:Indent"/>
    <childrenBlocks itemref="doc:CoreArea"/>
    <childrenBlocks itemref="doc:Indent2"/>
    <!-- Attributes -->
    <stretchFactor>2</stretchFactor>
  </ContentItemDetail>
 
  <ContentItemDetail itemName="Indent">
    <!-- Attributes -->
    <size>80,80</size>
    <stretchFactor>0</stretchFactor>
  </ContentItemDetail>
 
  <ContentItemDetail itemName="Indent2">
    <!-- Attributes -->
    <size>80,80</size>
    <stretchFactor>0</stretchFactor>
  </ContentItemDetail>
 
  <!-- CoreArea -->
  <ContentItemDetail itemName="CoreArea">
    <childrenBlocks itemref="doc:Headline"/>
    <childrenBlocks itemref="doc:DateTime"/>
    <!-- Attributes -->
    <orientationEnum>Vertical</orientationEnum>
    <stretchFactor>2</stretchFactor>
  </ContentItemDetail>
 
  <detail:Headline itemName="Headline">
    <title>Core</title>
    <characterStyle itemref="detail:LabelStyle"/>
    <textAlignmentEnum>Center</textAlignmentEnum>    
    <stretchFactor>0.0</stretchFactor>
  </detail:Headline>
  
  <detail:DateTimeBlock itemName="DateTime">
    <title>Date/Time</title>
    <characterStyle itemref="detail:TextStyle"/>
    <textAlignmentEnum>Center</textAlignmentEnum>    
    <stretchFactor>0.0</stretchFactor>
  </detail:DateTimeBlock>
  
  <!-- StampedEmailArea -->
  <ContentItemDetail itemName="StampedEmailArea">
    <childrenBlocks itemref="doc:StampedEmailString"/>
    <!-- Attributes -->
    <colorStyle itemref="detail:GrayBackground3"/>
    <orientationEnum>Vertical</orientationEnum>
    <stretchFactor>0.0</stretchFactor>
  </ContentItemDetail>
 
  <StaticText itemName="StampedEmailString">
    <title>Stamped Email</title>
    <characterStyle itemref="detail:LabelStyle"/>
    <textAlignmentEnum>Center</textAlignmentEnum>    
    <stretchFactor>0.0</stretchFactor>
  </StaticText>
  
  <!-- NotesArea -->
  <ContentItemDetail itemName="NotesArea">
    <childrenBlocks itemref="doc:NotesString"/>
    <childrenBlocks itemref="doc:TheNotes"/>
    <!-- Attributes -->
    <colorStyle itemref="detail:GrayBackground3"/>
    <orientationEnum>Vertical</orientationEnum>
    <stretchFactor>3</stretchFactor>
  </ContentItemDetail>
  
  <StaticText itemName="NotesString">
    <title>Notes</title>
    <characterStyle itemref="detail:LabelStyle"/>
    <textAlignmentEnum>Center</textAlignmentEnum>    
    <stretchFactor>0.0</stretchFactor>
  </StaticText>
  
  <detail:NoteBody itemName="TheNotes">
    <characterStyle itemref="detail:TextStyle"/>
    <lineStyleEnum>MultiLine</lineStyleEnum>
    <textStyleEnum>RichText</textStyleEnum>
    <readOnly>False</readOnly>
    <textAlignmentEnum>Left</textAlignmentEnum>
    <stretchFactor>1</stretchFactor>
  </detail:NoteBody>

  <!-- MessagesArea -->
  <ContentItemDetail itemName="MessagesArea">
    <childrenBlocks itemref="doc:MessagesString"/>
    <!-- Attributes -->
    <colorStyle itemref="detail:GrayBackground3"/>
    <orientationEnum>Vertical</orientationEnum>
    <stretchFactor>1</stretchFactor>
  </ContentItemDetail>
  
  <StaticText itemName="MessagesString">
    <title>Messages</title>
    <characterStyle itemref="detail:LabelStyle"/>
    <textAlignmentEnum>Center</textAlignmentEnum>    
    <stretchFactor>2</stretchFactor>
  </StaticText>
  
  <!-- SharingBar -->
  <ContentItemDetail itemName="SharingBar">
    <childrenBlocks itemref="doc:SharingString"/>
    <!-- Attributes -->
    <colorStyle itemref="detail:GrayBackground2"/>
    <orientationEnum>Vertical</orientationEnum>
    <stretchFactor>0</stretchFactor>
  </ContentItemDetail>
  
  <StaticText itemName="SharingString">
    <title>Sharing Bar</title>
    <characterStyle itemref="detail:LabelStyle"/>
    <textAlignmentEnum>Center</textAlignmentEnum>    
    <stretchFactor>0.0</stretchFactor>
  </StaticText>
  
  <!-- LabelingArea -->
  <ContentItemDetail itemName="LabelingArea">
    <childrenBlocks itemref="doc:LabelingString"/>
    <!-- Attributes -->
    <colorStyle itemref="detail:GrayBackground3"/>
    <orientationEnum>Vertical</orientationEnum>
    <stretchFactor>1.0</stretchFactor>
  </ContentItemDetail>
  
  <StaticText itemName="LabelingString">
    <title>See Also</title>
    <characterStyle itemref="detail:LabelStyle"/>
    <textAlignmentEnum>Center</textAlignmentEnum>    
    <stretchFactor>0.0</stretchFactor>
  </StaticText>
  
</core:Parcel>

