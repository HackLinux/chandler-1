    <stretchFactor>0.0</stretchFactor>
  </detail:Headline>
  
  <detail:DateTimeBlock itsName="DateTime">
    <title>Date/Time</title>
    <characterStyle itemref="detail:TextStyle"/>
    <textAlignmentEnum>Center</textAlignmentEnum>    
    <stretchFactor>0.0</stretchFactor>
  </detail:DateTimeBlock>
  
