  <!--
    Events
  -->
  
  <BlockEvent itemName="DummyEvent">
    <dispatchEnum>SendToBlock</dispatchEnum>
    <methodName>onToolPressStub</methodName>
    <dispatchToBlock itemref="doc:MarkupBar1"/>
  </BlockEvent>

  <!--
    Layout blocks
  -->
  
  <!-- Root -->
  <ContentItemDetail itemName="DetailRoot">
    <!-- child blocks -->
    <childrenBlocks itemref="doc:MarkupBar1"/>
    <childrenBlocks itemref="doc:FromAndToArea"/>
    <childrenBlocks itemref="doc:CoreIndent"/>
    <childrenBlocks itemref="doc:StampedEmailArea"/>
    <childrenBlocks itemref="doc:NotesArea"/>
    <childrenBlocks itemref="doc:MessagesArea"/>
    <childrenBlocks itemref="doc:SharingBar"/>
    <childrenBlocks itemref="doc:LabelingArea"/>
    <!-- ToolbarItems -->
    <childrenBlocks itemref="doc:TriageButton"/>
    <childrenBlocks itemref="doc:Triage"/>
    <childrenBlocks itemref="doc:SharingButton"/>
    <childrenBlocks itemref="doc:TaskButton"/>
    <childrenBlocks itemref="doc:CalendarButton"/>
    <childrenBlocks itemref="doc:Spacer1"/>
    <childrenBlocks itemref="doc:NeedsReplyButton"/>
    <childrenBlocks itemref="doc:Spacer2"/>
    <childrenBlocks itemref="doc:OutboxFlag"/>
    <childrenBlocks itemref="doc:RepliedFlag"/>
    <childrenBlocks itemref="doc:ForwardedFlag"/>
    <childrenBlocks itemref="doc:RedirectedFlag"/>
    <childrenBlocks itemref="doc:DraftFlag"/>
    <childrenBlocks itemref="doc:QueuedFlag"/>
    <childrenBlocks itemref="doc:Spacer3"/>
    <childrenBlocks itemref="doc:PrivateButton"/>
     <!-- Attributes -->
    <orientationEnum>Vertical</orientationEnum>
    <size>80,20</size>
    <minimumSize>80,40</minimumSize>
  </ContentItemDetail>

  <!-- MarkupBar -->
  <detail:MarkupBar itemName="MarkupBar1">
    <!-- Dynamic Children -->
    <dynamicChildren itemref="doc:TriageButton"/>
    <dynamicChildren itemref="doc:Triage"/>
    <dynamicChildren itemref="doc:SharingButton"/>
    <dynamicChildren itemref="doc:TaskButton"/>
    <dynamicChildren itemref="doc:CalendarButton"/>
    <dynamicChildren itemref="doc:Spacer1"/>
    <dynamicChildren itemref="doc:NeedsReplyButton"/>
    <dynamicChildren itemref="doc:Spacer2"/>
    <dynamicChildren itemref="doc:OutboxFlag"/>
    <dynamicChildren itemref="doc:RepliedFlag"/>
    <dynamicChildren itemref="doc:ForwardedFlag"/>
    <dynamicChildren itemref="doc:RedirectedFlag"/>
    <dynamicChildren itemref="doc:DraftFlag"/>
    <dynamicChildren itemref="doc:QueuedFlag"/>
    <dynamicChildren itemref="doc:Spacer3"/>
    <dynamicChildren itemref="doc:PrivateButton"/>
    <!-- Attributes -->
    <colorStyle itemref="detail:GrayBackground3"/>
    <toolSize>16,16</toolSize>
    <subscribeWhenVisibleEvents itemref="doc:DummyEvent"/>
  </detail:MarkupBar>

  <!--
    ToolbarItems
  -->
  <ToolbarItem itsName="TriageButton">
    <!-- Attributes -->
    <location>MarkupBar1</location>
    <dynamicParent itemref="doc:MarkupBar1"/>
    <title>Triage</title>
    <bitmap>application/images/triage.png</bitmap>
    <selectedBitmap></selectedBitmap>
    <toolbarItemKind>Button</toolbarItemKind>
    <helpString>Decide when to do...</helpString>
    <event itemref="doc:DummyEvent"/>
  </ToolbarItem>

  <ToolbarItem itsName="Triage">
    <!-- Attributes -->
    <location>MarkupBar1</location>
    <dynamicParent itemref="doc:MarkupBar1"/>
    <title>Triage</title>
    <toolbarItemKind>Combo</toolbarItemKind>
    <helpString>Mark Item to be done now or later, etc</helpString>
    <prototype itemref="doc:TriageCombo"/>
    <event itemref="doc:DummyEvent"/>
  </ToolbarItem>
  
  <!-- prototype for the above ToolbarItem -->
  <ComboBox itemName="TriageCombo">
    <selection>Processing</selection>
    <choices>Processing</choices>
    <choices>Defered until</choices>
    <choices>Processed</choices>
  </ComboBox>
  
  <ToolbarItem itsName="SharingButton">
    <!-- Attributes -->
    <location>MarkupBar1</location>
    <dynamicParent itemref="doc:MarkupBar1"/>
    <title>Sharing</title>
    <bitmap>application/images/sharing.png</bitmap>
    <toolbarItemKind>Button</toolbarItemKind>
    <helpString>Enable sharing</helpString>
    <event itemref="doc:DummyEvent"/>
  </ToolbarItem>

  <ToolbarItem itsName="TaskButton">
    <!-- Attributes -->
    <location>MarkupBar1</location>
    <dynamicParent itemref="doc:MarkupBar1"/>
    <title>Task</title>
    <bitmap>application/images/task.png</bitmap>
    <toolbarItemKind>Button</toolbarItemKind>
    <helpString>Make into a Task</helpString>
    <event itemref="doc:DummyEvent"/>
  </ToolbarItem>

  <ToolbarItem itsName="CalendarButton">
    <!-- Attributes -->
