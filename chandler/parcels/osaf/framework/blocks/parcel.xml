    </Attribute>
    
    <Enumeration itemName="operationEnumType">
      <values>InsertBefore</values>
      <values>Replace</values>
      <values>Delete</values>
    </Enumeration>
    
    <Attribute itemName="operation">
      <type itemref="docSchema:MenuEntry/operationEnumType"/>
    </Attribute>
    
    <Attribute itemName="menuLocation">
      <type itemref="String"/>
    </Attribute>
    
    <Attribute itemName="itemLocation">
      <type itemref="String"/>
    </Attribute>
    
    <Attribute itemName="helpString">
      <type itemref="String"/>
    </Attribute>
    
    <attributes itemref="docSchema:MenuEntry/title"/>
    <attributes itemref="docSchema:MenuEntry/operation"/>
    <attributes itemref="docSchema:MenuEntry/menuLocation"/>
    <attributes itemref="docSchema:MenuEntry/itemLocation"/>
    <attributes itemref="docSchema:MenuEntry/helpString"/>
  </Kind>

  <!--
    MenuItem
