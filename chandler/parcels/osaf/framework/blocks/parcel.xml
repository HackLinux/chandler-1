      <type itemref="String"/>
    </Attribute>

    <Attribute itemName="clicked">
      <type itemref="docSchema:BlockEvent"/>
    </Attribute>

    <Attribute itemName="rightClicked">
      <type itemref="docSchema:BlockEvent"/>
    </Attribute>

    <attributes itemref="docSchema:Button/title"/>
