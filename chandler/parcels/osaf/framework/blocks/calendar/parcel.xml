<Parcel itsName="calendar"
        xmlns="http://osafoundation.org/parcels/core"
        xmlns:blocks="http://osafoundation.org/parcels/osaf/framework/blocks"
        xmlns:calBlocks="http://osafoundation.org/parcels/osaf/framework/blocks/calendar">

  <description>calendar blocks</description>
  <version>0.3</version>

  <Kind itsName="CollectionCanvas">
    <classes key="python">osaf.framework.blocks.calendar.CollectionCanvas.CollectionBlock</classes>
    <superKinds itemref="blocks:RectangularChild"/>
    <attributes itemref="blocks:selection"/>
  </Kind>

  <Kind itsName="CanvasMonth">
    <classes key="python">osaf.framework.blocks.calendar.CalendarCanvas.MonthBlock</classes>
    <superKinds itemref="calBlocks:CollectionCanvas"/>

    <Attribute itsName="rangeStart">
      <type itemref="DateTime"/>
    </Attribute>
    <Attribute itsName="rangeIncrement">
      <type itemref="RelativeDateTime"/>
    </Attribute>
  </Kind>

  <Kind itsName="CanvasWeek">
    <classes key="python">osaf.framework.blocks.calendar.CalendarCanvas.WeekBlock</classes>
    <superKinds itemref="calBlocks:CollectionCanvas"/>

    <Attribute itsName="rangeStart">
      <type itemref="DateTime"/>
    </Attribute>
    <Attribute itsName="rangeIncrement">
      <type itemref="RelativeDateTime"/>
    </Attribute>
    <Attribute itsName="daysPerView">
      <type itemref="Integer"/>
    </Attribute>
    <attributes itemref="calBlocks:CanvasWeek/daysPerView"/>
  </Kind>


  <Kind itsName="MonthBlock">
    <classes key="python">osaf.framework.blocks.calendar.CalendarBlocks.MonthBlock</classes>
    <superKinds itemref="blocks:RectangularChild"/>

    <Attribute itsName="daysPerWeek">
      <type itemref="Integer"/>
    </Attribute>
    <Attribute itsName="weeksPerView">
      <type itemref="Integer"/>
    </Attribute>
    <Attribute itsName="offset">
      <type itemref="Integer"/>
    </Attribute>

    <Attribute itsName="rangeStart">
      <type itemref="DateTime"/>
    </Attribute>
    <Attribute itsName="rangeIncrement">
      <type itemref="RelativeDateTime"/>
    </Attribute>

    <attributes itemref="calBlocks:MonthBlock/daysPerWeek"/>
    <attributes itemref="calBlocks:MonthBlock/weeksPerView"/>
    <attributes itemref="calBlocks:MonthBlock/offset"/>
    <attributes itemref="calBlocks:MonthBlock/rangeStart"/>
    <attributes itemref="calBlocks:MonthBlock/rangeIncrement"/>
    <attributes itemref="blocks:characterStyle"/>
    <Cloud itsName="DefaultCloud">
        <Endpoint itsName="characterStyle">
            <attribute value="characterStyle"/>
            <includePolicy value="byRef"/>
        </Endpoint>
        <endpoints itemref="calBlocks:MonthBlock/DefaultCloud/characterStyle"/>
    </Cloud>
    <clouds alias="default" itemref="calBlocks:MonthBlock/DefaultCloud"/>
  </Kind>

  <Kind itsName="WeekBlock">
    <classes key="python">osaf.framework.blocks.calendar.CalendarBlocks.WeekBlock</classes>
    <superKinds itemref="blocks:RectangularChild"/>

    <Attribute itsName="daysPerView">
      <type itemref="Integer"/>
    </Attribute>
    <Attribute itsName="hoursPerView">
      <type itemref="Integer"/>
    </Attribute>
    <Attribute itsName="offset">
      <type itemref="Integer"/>
    </Attribute>

    <Attribute itsName="rangeStart">
      <type itemref="DateTime"/>
    </Attribute>
    <Attribute itsName="rangeIncrement">
      <type itemref="RelativeDateTime"/>
    </Attribute>

    <attributes itemref="calBlocks:WeekBlock/daysPerView"/>
    <attributes itemref="calBlocks:WeekBlock/hoursPerView"/>
    <attributes itemref="calBlocks:WeekBlock/offset"/>
    <attributes itemref="calBlocks:WeekBlock/rangeStart"/>
    <attributes itemref="calBlocks:WeekBlock/rangeIncrement"/>
    <attributes itemref="blocks:characterStyle"/>
    <Cloud itsName="DefaultCloud">
        <Endpoint itsName="characterStyle">
            <attribute value="characterStyle"/>
            <includePolicy value="byRef"/>
        </Endpoint>
        <endpoints itemref="calBlocks:WeekBlock/DefaultCloud/characterStyle"/>
    </Cloud>
    <clouds alias="default" itemref="calBlocks:WeekBlock/DefaultCloud"/>
  </Kind>

  <Kind itsName="MiniCalendar">
    <classes key="python">osaf.framework.blocks.calendar.CalendarBlocks.MiniCalendar</classes>
    <superKinds itemref="blocks:RectangularChild"/>
  </Kind>

</Parcel>
