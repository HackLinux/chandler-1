<?xml version="1.0"?>

<DomainSchema itemName="contacts:ContactsSchema"
              root="Contacts"
              xmlns="http://osafoundation.org/2003/08/schema_definition">

  <displayName>Contacts Schema</displayName>
  <description>Contacts schema for the 0.2 release</description>
  <version>0.1</version>

  <itemPathMapping prefix="types"
                   path="//Schema/Model/Types/"/>
  <itemPathMapping prefix="core"
                   path="//Schema/Model/"/>
  <itemPathMapping prefix="contacts"
                   path="//Schema/ContactsSchema/"/>

  <!-- Attributes used in ContactName -->

  <Attribute itemName="contacts:fullname">
    <displayName>Full Name</displayName>
    <cardinality>single</cardinality>
    <type itemref="types:String"/>
  </Attribute>

  <Attribute itemName="contacts:sortname">
    <displayName>Sort Name</displayName>
    <cardinality>single</cardinality>
    <type itemref="types:String"/>
  </Attribute>

  <Attribute itemName="contacts:firstname">
    <displayName>First Name</displayName>
    <cardinality>single</cardinality>
    <type itemref="types:String"/>
  </Attribute>

  <Attribute itemName="contacts:middlename">
    <displayName>Middle Name</displayName>
    <cardinality>single</cardinality>
    <type itemref="types:String"/>
  </Attribute>

  <Attribute itemName="contacts:lastname">
    <displayName>Last Name</displayName>
    <cardinality>single</cardinality>
    <type itemref="types:String"/>
  </Attribute>

  <Attribute itemName="contacts:nickname">
    <displayName>Nickname</displayName>
    <cardinality>single</cardinality>
    <type itemref="types:String"/>
  </Attribute>

  <Attribute itemName="contacts:nameEntity">
    <displayName>Name Entity</displayName>
    <cardinality>single</cardinality>
    <type itemref="contacts:ContactEntity"/>
    <inverseAttribute itemref="contacts:contactName"/>
  </Attribute>

  <!-- ContactName Item Definition -->

  <Kind itemName="contacts:ContactName">
    <displayName>Contact Name</displayName>
    <attributes itemref="contacts:fullname"/>
    <attributes itemref="contacts:sortname"/>
    <attributes itemref="contacts:firstname"/>
    <attributes itemref="contacts:middlename"/>
    <attributes itemref="contacts:lastname"/>
    <attributes itemref="contacts:nickname"/>
    <attributes itemref="contacts:nameEntity"/>
    <classes key="python">OSAF.contacts.model.ContactName.ContactName</classes>
    <superKinds itemref="core:Item" />
  </Kind>

  <!-- Attributes used in ContactMethod -->

  <Attribute itemName="contacts:methodType">
    <displayName>Method Type</displayName>
    <cardinality>single</cardinality>
    <type itemref="types:String"/>
  </Attribute>

  <Attribute itemName="contacts:methodDescription">
    <displayName>Method Description</displayName>
    <cardinality>single</cardinality>
    <type itemref="types:String"/>
  </Attribute>

  <Attribute itemName="contacts:methodComment">
    <displayName>Method Type</displayName>
    <cardinality>single</cardinality>
    <type itemref="types:String"/>
  </Attribute>

  <Attribute itemName="contacts:methodValue">
    <displayName>Method Value</displayName>
    <cardinality>single</cardinality>
    <type itemref="types:String"/>
  </Attribute>

  <Attribute itemName="contacts:methodEntity">
    <displayName>Method Entity</displayName>
    <cardinality>single</cardinality>
    <type itemref="contacts:ContactEntity"/>
    <inverseAttribute itemref="contacts:contactMethods"/>
  </Attribute>

  <!-- ContactMethod Item Definition -->

  <Kind itemName="contacts:ContactMethod">
    <displayName>Contact Method</displayName>
    <attributes itemref="contacts:methodType"/>
    <attributes itemref="contacts:methodDescription"/>
    <attributes itemref="contacts:methodComment"/>
    <attributes itemref="contacts:methodValue"/>
    <attributes itemref="contacts:methodEntity"/>
    <classes key="python">OSAF.contacts.model.ContactMethod.ContactMethod</classes>
    <superKinds itemref="core:Item" />
  </Kind>

  <!-- Attributes used in PhoneContactMethod -->

  <Attribute itemName="contacts:phonenumber">
    <displayName>Phone Number</displayName>
    <cardinality>single</cardinality>
    <type itemref="types:String"/>
  </Attribute>

  <!-- PhoneContactMethod Item Definition -->

  <Kind itemName="contacts:PhoneContactMethod">
    <displayName>Phone Contact Method</displayName>
    <attributes itemref="contacts:phonenumber"/>
    <superKinds itemref="contacts:ContactMethod"/>
    <classes key="python">OSAF.contacts.model.ContactMethod.ContactMethod</classes>
  </Kind>

  <!-- Attributes used in EmailContactMethod -->

  <Attribute itemName="contacts:emailaddress">
    <displayName>Email Address</displayName>
    <cardinality>single</cardinality>
    <type itemref="types:String"/>
  </Attribute>

  <!-- EmailContactMethod Item Definition -->

  <Kind itemName="contacts:EmailContactMethod">
    <displayName>Email Contact Method</displayName>
    <attributes itemref="contacts:emailaddress"/>
    <superKinds itemref="contacts:ContactMethod"/>
    <classes key="python">OSAF.contacts.model.ContactMethod.ContactMethod</classes>
  </Kind>

  <!-- Attributes used in JabberContactMethod -->

  <Attribute itemName="contacts:jabberAddress">
    <displayName>Jabber ID</displayName>
    <cardinality>single</cardinality>
    <type itemref="types:String"/>
  </Attribute>

  <!-- JabberContactMethod Item Definition -->
  <Kind itemName="contacts:JabberContactMethod">
    <displayName>Jabber Contact Method</displayName>
    <attributes itemref="contacts:jabberAddress"/>
    <superKinds itemref="contacts:ContactMethod"/>
    <classes key="python">OSAF.contacts.model.ContactMethod.ContactMethod</classes>
  </Kind>

  <!-- Attributes used in ContactFormat -->

  <Attribute itemName="contacts:headerAttributes">
    <displayName>Header Attributes</displayName>
    <cardinality>single</cardinality>
    <type itemref="types:String"/>
  </Attribute>

  <Attribute itemName="contacts:bodyAttributes">
    <displayName>Body Attributes</displayName>
    <cardinality>single</cardinality>
    <type itemref="types:String"/>
  </Attribute>

  <Attribute itemName="contacts:formatEntity">
    <displayName>Format Entity</displayName>
    <cardinality>single</cardinality>
    <type itemref="contacts:ContactEntity"/>
    <inverseAttribute itemref="contacts:contactFormat"/>
  </Attribute>

  <!-- ContactFormat Item Definition -->

  <Kind itemName="contacts:ContactFormat">
    <displayName>Contact Format</displayName>
    <attributes itemref="contacts:headerAttributes"/>
    <attributes itemref="contacts:bodyAttributes"/>
    <attributes itemref="contacts:formatEntity"/>
    <classes key="python">OSAF.contacts.model.ContactFormat.ContactFormat</classes>
    <superKinds itemref="core:Item" />
  </Kind>

  <!-- Main Attributes used in ContactEntity -->

  <Attribute itemName="contacts:contactType">
    <displayName>Contact Type</displayName>
    <cardinality>single</cardinality>
    <type itemref="types:String"/>
  </Attribute>

  <Attribute itemName="contacts:contactName">
    <displayName>Contact Name</displayName>
    <cardinality>single</cardinality>
    <type itemref="contacts:ContactName"/>
    <inverseAttribute itemref="contacts:nameEntity"/>
  </Attribute>

  <Attribute itemName="contacts:contactMethods">
    <displayName>Contact Methods</displayName>
    <cardinality>list</cardinality>
    <type itemref="contacts:ContactMethod"/>
    <inverseAttribute itemref="contacts:methodEntity"/>
  </Attribute>

  <Attribute itemName="contacts:contactPhotoURL">
    <displayName>Contact Photo URL</displayName>
    <cardinality>single</cardinality>
    <type itemref="types:String"/>
  </Attribute>

  <Attribute itemName="contacts:contactGroups">
    <displayName>Contact Groups</displayName>
    <cardinality>list</cardinality>
    <type itemref="types:String"/>
  </Attribute>

  <Attribute itemName="contacts:contactFormat">
    <displayName>Contact Format</displayName>
    <cardinality>single</cardinality>
    <type itemref="contacts:ContactFormat"/>
    <inverseAttribute itemref="contacts:formatEntity"/>
  </Attribute>

  <!-- Other Attributes used in ContactEntity -->

  <Attribute itemName="contacts:companyName">
    <displayName>Company Name</displayName>
    <cardinality>single</cardinality>
    <type itemref="types:String"/>
  </Attribute>

  <Attribute itemName="contacts:jobTitle">
    <displayName>Job Title</displayName>
    <cardinality>single</cardinality>
    <type itemref="types:String"/>
  </Attribute>

  <Attribute itemName="contacts:occupation">
    <displayName>Occupation</displayName>
    <cardinality>single</cardinality>
    <type itemref="types:String"/>
  </Attribute>

  <Attribute itemName="contacts:relationship">
    <displayName>Relationship</displayName>
    <cardinality>single</cardinality>
    <type itemref="types:String"/>
  </Attribute>

  <Attribute itemName="contacts:age">
    <displayName>Age</displayName>
    <cardinality>single</cardinality>
    <type itemref="types:Integer"/>
  </Attribute>

  <Attribute itemName="contacts:gender">
    <displayName>Gender</displayName>
    <cardinality>single</cardinality>
    <type itemref="types:String"/>
  </Attribute>

  <Attribute itemName="contacts:sharing">
    <displayName>Sharing</displayName>
    <cardinality>single</cardinality>
    <type itemref="types:String"/>
  </Attribute>

  <!-- ContactEntity Item Definition -->

  <Kind itemName="contacts:ContactEntity">
    <displayName>Contact Entity</displayName>
    <attributes itemref="contacts:contactType"/>
    <attributes itemref="contacts:contactName"/>
    <attributes itemref="contacts:contactMethods"/>
    <attributes itemref="contacts:contactPhotoURL"/>
    <attributes itemref="contacts:contactGroups"/>
    <attributes itemref="contacts:contactFormat"/>
    <attributes itemref="contacts:companyName"/>
    <attributes itemref="contacts:jobTitle"/>
    <attributes itemref="contacts:occupation"/>
    <attributes itemref="contacts:relationship"/>
    <attributes itemref="contacts:age"/>
    <attributes itemref="contacts:gender"/>
    <attributes itemref="contacts:sharing"/>
    <classes key="python">OSAF.contacts.model.ContactEntity.ContactEntity</classes>
    <superKinds itemref="core:Item" />
  </Kind>

</DomainSchema>
