    <classes key="python">OSAF.document.model.SimpleControls.Choice</classes>
    <superKinds itemref="doc:Block" />
  </Kind>

  <Kind itemName="Tree">
    <displayName>Tree</displayName>
    
    <classes key="python">OSAF.document.model.SimpleControls.Tree</classes>
    <superKinds itemref="doc:Block" />
