<Parcel parcelName="pim:CalendarSchema"
        xmlns="//Schema/Core"
        xmlns:core="//Schema/Core"
	xmlns:pim="//Parcels/OSAF/PimSchema"
        xmlns:cal="//Parcels/OSAF/PimSchema/CalendarSchema"
        xmlns:contact="//Parcels/OSAF/PimSchema/ContactSchema">

  <displayName>Calendar Schema</displayName>
  <description>Calendar schema for the 0.3 release</description>
  <version>0.3</version>
  <author>Open Source Applications Foundation</author>

  <Attribute itemName="cal:startTime">
    <displayName>Start Time</displayName>
    <cardinality>single</cardinality>
    <type itemref="core:DateTime"/>
  </Attribute>

  <Attribute itemName="cal:endTime">
    <displayName>End Time</displayName>
    <cardinality>single</cardinality>
    <type itemref="core:DateTime"/>
  </Attribute>

  <Attribute itemName="cal:headline">
    <displayName>Headline</displayName>
    <cardinality>single</cardinality>
    <type itemref="core:String"/>
  </Attribute>

  <Attribute itemName="cal:location">
    <displayName>Location</displayName>
    <cardinality>single</cardinality>
    <type itemref="cal:Location"/>
    <inverseAttribute itemref="cal:eventsAtLocation"/>
  </Attribute>

  <Attribute itemName="cal:calendar">
    <displayName>Calendar</displayName>
    <cardinality>set</cardinality>
    <type itemref="cal:Calendar"/>
  </Attribute>

  <Attribute itemName="cal:participants">
    <displayName>Participants</displayName>
    <cardinality>list</cardinality>
    <type itemref="contact:ContactEntity"/>
    <inverseAttribute itemref="cal:participatingIn"/>
  </Attribute>

  <Attribute itemName="cal:participatingIn">
    <displayName>Participating In</displayName>
    <cardinality>list</cardinality>
    <type itemref="cal:CalendarEvent"/>
    <inverseAttribute itemref="cal:participants"/>
  </Attribute>

  <Attribute itemName="cal:organizer">
    <displayName>Meeting Organizer</displayName>
    <cardinality>single</cardinality>
    <type itemref="contact:ContactEntity"/>
    <superAttribute itemref="cal:participants"/>
  </Attribute>

  <Attribute itemName="cal:attendees">
    <displayName>Meeting Attendee</displayName>
    <cardinality>list</cardinality>
    <type itemref="contact:ContactEntity"/>
    <superAttribute itemref="cal:participants"/>
  </Attribute>

  <Attribute itemName="cal:recurrence">
    <displayName>Recurrence Patterns</displayName>
    <cardinality>list</cardinality>
    <type itemref="cal:RecurrencePattern"/>
  </Attribute>

  <Attribute itemName="cal:reminders">
    <displayName>Reminder</displayName>
    <cardinality>list</cardinality>
    <type itemref="cal:Reminder"/>
  </Attribute>

  <!-- @@@ This may have an enum or type as a type, string temporarily -->
  <Attribute itemName="cal:transparency">
    <displayName>Time Transparency</displayName>
    <cardinality>single</cardinality>
    <type itemref="core:String"/>
  </Attribute>

  <!-- @@@ temporary attribute, something for location and calendar -->
  <Attribute itemName="cal:name">
    <displayName>Name</displayName>
    <cardinality>single</cardinality>
    <type itemref="core:String"/>
  </Attribute>

  <Attribute itemName="cal:eventsAtLocation">
    <displayName>Calendar Events</displayName>
    <cardinality>list</cardinality>
    <type itemref="cal:CalendarEvent"/>
    <inverseAttribute itemref="cal:location"/>
  </Attribute>

  <Kind itemName="cal:CalendarEvent">
    <displayName>Calendar Event</displayName>
    <attributes itemref="cal:headline"/>
    <attributes itemref="cal:startTime"/>
    <attributes itemref="cal:endTime"/>
    <attributes itemref="cal:location"/>
    <attributes itemref="cal:calendar"/>
    <attributes itemref="cal:participants"/>
    <attributes itemref="cal:organizer"/>
    <attributes itemref="cal:attendees"/>
    <attributes itemref="cal:recurrence"/>
    <attributes itemref="cal:reminders"/>
    <attributes itemref="cal:transparency"/>
    <displayAttribute itemref="cal:headline"/>
    <classes key="python">OSAF.PimSchema.CalendarSchema.CalendarEvent.CalendarEvent</classes>
  </Kind>

  <!-- @@@ Location may be not be calendar specific -->
  <Kind itemName="cal:Location">
    <displayName>Location</displayName>
    <attributes itemref="cal:name"/>
    <attributes itemref="cal:eventsAtLocation"/>
    <displayAttribute itemref="cal:name"/>
    <classes key="python">OSAF.PimSchema.CalendarSchema.Location.Location</classes>
  </Kind>

  <Kind itemName="cal:Calendar">
    <displayName>Calendar</displayName>
    <attributes itemref="cal:name"/>
    <displayAttribute itemref="cal:name"/>
    <classes key="python">OSAF.PimSchema.CalendarSchema.Calendar.Calendar</classes>
  </Kind>

  <Kind itemName="cal:RecurrencePattern">
    <displayName>Recurrence Pattern</displayName>
  </Kind>

  <Kind itemName="cal:Reminder">
    <displayName>Reminder</displayName>
  </Kind>

</Parcel>
