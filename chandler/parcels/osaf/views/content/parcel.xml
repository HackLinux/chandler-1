<core:Parcel describes="//parcels/OSAF/views/content"
             itemName="content"
             xmlns="//parcels/OSAF/framework/blocks"
	     xmlns:core="//Schema/Core"
             xmlns:calendarModel="//parcels/OSAF/contentmodel/calendar"
             xmlns:noteModel="//parcels/OSAF/contentmodel/notes"
             xmlns:contactsModel="//parcels/OSAF/contentmodel/contacts"
	     xmlns:view="//parcels/OSAF/views/content">

  <core:version>0.3</core:version>

  <!-- Queries -->
  <Query itemName="calendarQuery">
    <queryEnum>Kind</queryEnum>
    <data itemref="calendarModel:CalendarEvent"/>
  </Query>

  <Query itemName="notesQuery">
    <queryEnum>Kind</queryEnum>
    <data itemref="noteModel:Note"/>
  </Query>

  <Query itemName="contactQuery">
    <queryEnum>Kind</queryEnum>
    <data itemref="contactsModel:Contact"/>
  </Query>

  <Query itemName="mixedQuery">
    <queryEnum>Kind</queryEnum>
    <data itemref="calendarModel:CalendarEvent"/>
    <data itemref="noteModel:Note"/>
  </Query>

  <!-- Styles -->

  <!-- Calendar List -->
  <List itemName="CalendarList">
    <contentSpec itemref="view:calendarQuery"/>

    <elementDelegate>OSAF.views.content.Content.CalendarListDelegate</elementDelegate>

    <columnHeadings>Participants</columnHeadings>
    <columnHeadings>Headline</columnHeadings>
    <columnHeadings>Start Time</columnHeadings>
    <columnWidths>270</columnWidths>
    <columnWidths>150</columnWidths>
    <columnWidths>170</columnWidths>

    <open>True</open>
    <size>600,200</size>
    <minimumSize>400,100</minimumSize>
    <border>0.0, 0.0, 0.0, 0.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>1.0</stretchFactor>
  </List>

  <!-- Contact List -->
  <List itemName="ContactList">
    <contentSpec itemref="view:contactQuery"/>

    <elementDelegate>OSAF.views.content.Content.ContactListDelegate</elementDelegate>
    
    <columnHeadings>First Name</columnHeadings>
    <columnHeadings>Last Name</columnHeadings>
    <columnHeadings>Telephone</columnHeadings>
    <columnHeadings>Address</columnHeadings>
    <columnWidths>140</columnWidths>
    <columnWidths>140</columnWidths>
    <columnWidths>130</columnWidths>
    <columnWidths>240</columnWidths>

    <open>True</open>
    <size>600,200</size>
    <minimumSize>400,100</minimumSize>
    <border>0.0, 0.0, 0.0, 0.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>1.0</stretchFactor>
  </List>

  <!-- Note List -->
  <List itemName="NoteList">
    <contentSpec itemref="view:notesQuery"/>

    <elementDelegate>OSAF.views.content.Content.NoteListDelegate</elementDelegate>

    <columnHeadings>Description</columnHeadings>
    <columnHeadings>Created On</columnHeadings>
    <columnWidths>270</columnWidths>
    <columnWidths>170</columnWidths>

    <open>True</open>
    <size>600,200</size>
    <minimumSize>400,100</minimumSize>
    <border>0.0, 0.0, 0.0, 0.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>1.0</stretchFactor>
  </List>

  <!-- Mixed List -->
  <List itemName="MixedList">
    <contentSpec itemref="view:mixedQuery"/>

    <elementDelegate>OSAF.views.content.Content.MixedListDelegate</elementDelegate>

    <columnHeadings>Who (Participants)</columnHeadings>
    <columnHeadings>About (Headline)</columnHeadings>
    <columnHeadings>Date (Start Time)</columnHeadings>
    <columnWidths>270</columnWidths>
    <columnWidths>150</columnWidths>
    <columnWidths>170</columnWidths>

    <open>True</open>
    <size>600,200</size>
    <minimumSize>400,100</minimumSize>
    <border>0.0, 0.0, 0.0, 0.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>1.0</stretchFactor>
  </List>

  <ItemDetail itemName="ContentItemDetail"
              itemClass="OSAF.views.content.Content.ContentItemDetail">
    <open>True</open>
    <size>100,50</size>
    <minimumSize>100,50</minimumSize>
    <border>0.0, 0.0, 0.0, 0.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>1.0</stretchFactor>
  </ItemDetail>

  <ItemDetail itemName="CalendarEventDetail"
              itemClass="OSAF.views.content.Content.ContentItemDetail">
    <open>True</open>
    <size>100,50</size>
    <minimumSize>100,50</minimumSize>
    <border>0.0, 0.0, 0.0, 0.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>1.0</stretchFactor>
  </ItemDetail>

  <ItemDetail itemName="ContactDetail"
              itemClass="OSAF.views.content.Content.ContentItemDetail">
    <open>True</open>
    <size>100,50</size>
    <minimumSize>100,50</minimumSize>
    <border>0.0, 0.0, 0.0, 0.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>1.0</stretchFactor>
  </ItemDetail>

  <ItemDetail itemName="NoteDetail"
              itemClass="OSAF.views.content.Content.ContentItemDetail">
    <open>True</open>
    <size>100,50</size>
    <minimumSize>100,50</minimumSize>
    <border>0.0, 0.0, 0.0, 0.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>1.0</stretchFactor>
  </ItemDetail>


  <!-- Calendar View -->
  <SplitWindow itemName="CalendarListView">
    <childrenBlocks itemref="view:CalendarList"/>
    <childrenBlocks itemref="view:CalendarEventDetail"/>

    <open>True</open>
    <eventBoundary>True</eventBoundary>

    <size>600,200</size>
    <minimumSize>400,100</minimumSize>
    <border>1.0, 1.0, 1.0, 1.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>1.0</stretchFactor>

    <orientationEnum>Horizontal</orientationEnum>
    <splitPercentage>0.5</splitPercentage>
  </SplitWindow>

  <!-- Notes View -->
  <SplitWindow itemName="NoteListView">
    <childrenBlocks itemref="view:NoteList"/>
    <childrenBlocks itemref="view:NoteDetail"/>

    <open>True</open>
    <eventBoundary>True</eventBoundary>

    <size>600,200</size>
    <minimumSize>400,100</minimumSize>
    <border>1.0, 1.0, 1.0, 1.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>1.0</stretchFactor>

    <orientationEnum>Horizontal</orientationEnum>
    <splitPercentage>0.5</splitPercentage>
  </SplitWindow>

  <!-- Contacts View -->
  <SplitWindow itemName="ContactListView">
    <childrenBlocks itemref="view:ContactList"/>
    <childrenBlocks itemref="view:ContactDetail"/>

    <open>True</open>
    <eventBoundary>True</eventBoundary>

    <size>600,200</size>
    <minimumSize>400,100</minimumSize>
    <border>1.0, 1.0, 1.0, 1.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>1.0</stretchFactor>

    <orientationEnum>Horizontal</orientationEnum>
    <splitPercentage>0.5</splitPercentage>
  </SplitWindow>

  <!-- Mixed View -->
  <SplitWindow itemName="MixedListView">
    <childrenBlocks itemref="view:MixedList"/>
    <childrenBlocks itemref="view:ContentItemDetail"/>

    <open>True</open>
    <eventBoundary>True</eventBoundary>

    <size>600,200</size>
    <minimumSize>400,100</minimumSize>
    <border>1.0, 1.0, 1.0, 1.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>1.0</stretchFactor>

    <orientationEnum>Horizontal</orientationEnum>
    <splitPercentage>0.5</splitPercentage>
  </SplitWindow>


</core:Parcel>