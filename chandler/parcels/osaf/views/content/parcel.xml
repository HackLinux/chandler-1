  <!-- In View -->
  <DetailBlock itsName="InDetailView">
    <contents itemref="core:None"/>
    <detailViewCache itemref="view:InDetailViewCache"/>
  </DetailBlock>

  <DetailViewCache itsName="InDetailViewCache">
  </DetailViewCache>

