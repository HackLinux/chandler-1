  <!-- Notes View -->
  <SplitterWindow itsName="NotesView">
    <contents itemref="view:notesItemCollection"/>

    <childrenBlocks itemref="view:NotesTable"/>
    <childrenBlocks itemref="detail:DetailRootTemplate" copy="DetailRoot"/>

    <eventBoundary>True</eventBoundary>
    <border>0.0, 0.0, 0.0, 0.0</border>
    <splitPercentage>0.5</splitPercentage>
    <orientationEnum>Vertical</orientationEnum>
  </SplitterWindow>

  <!-- Tasks View -->
  <SplitterWindow itsName="TasksView">
    <contents itemref="view:taskItemCollection"/>

    <childrenBlocks itemref="view:TasksTable"/>
    <childrenBlocks itemref="detail:DetailRootTemplate" copy="DetailRoot"/>

