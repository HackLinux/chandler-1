<core:Parcel itsName="content"
             xmlns="http://osafoundation.org/parcels/osaf/framework/blocks"
             xmlns:core="http://osafoundation.org/parcels/core"
             xmlns:calendarBlocks="http://osafoundation.org/parcels/osaf/framework/blocks/calendar"
             xmlns:contentModel="http://osafoundation.org/parcels/osaf/contentmodel"
             xmlns:calendarModel="http://osafoundation.org/parcels/osaf/contentmodel/calendar"
             xmlns:mailModel="http://osafoundation.org/parcels/osaf/contentmodel/mail"
             xmlns:taskModel="http://osafoundation.org/parcels/osaf/contentmodel/tasks"
             xmlns:contactsModel="http://osafoundation.org/parcels/osaf/contentmodel/contacts"
             xmlns:detail="http://osafoundation.org/parcels/osaf/framework/blocks/detail"
             xmlns:view="http://osafoundation.org/parcels/osaf/views/content"
             xmlns:events="http://osafoundation.org/parcels/osaf/framework/blocks/Events">

  <core:version>0.3</core:version>

  <!-- ItemCollections -->
  <contentModel:ItemCollection itsName="calendarItemCollection">
    <displayName>Calendar Demo</displayName>
    <_rule value="for i in '//parcels/osaf/contentmodel/calendar/CalendarEventMixin' where True"/>
  </contentModel:ItemCollection>

  <contentModel:ItemCollection itsName="notesItemCollection">
    <displayName>Notes</displayName>
    <_rule value="for i in '//parcels/osaf/contentmodel/Note' where True"/>
  </contentModel:ItemCollection>

  <contentModel:ItemCollection itsName="taskItemCollection">
    <displayName>TaskList</displayName>
    <_rule value="for i in '//parcels/osaf/contentmodel/tasks/TaskMixin' where True"/>
  </contentModel:ItemCollection>

  <contentModel:ItemCollection itsName="mailItemCollection">
    <displayName>MailList</displayName>
    <_rule value="for i in '//parcels/osaf/contentmodel/mail/MailMessageMixin' where True"/>
  </contentModel:ItemCollection>

  <contentModel:ItemCollection itsName="contactItemCollection">
    <displayName>Contacts</displayName>
    <_rule value="for i in '//parcels/osaf/contentmodel/contacts/Contact' where True"/>
  </contentModel:ItemCollection>

  <contentModel:ItemCollection itsName="mixedItemCollection">
    <displayName>Mixed</displayName>
    <_rule value="union(for i in '//parcels/osaf/contentmodel/Note' where True, for i in '//parcels/osaf/contentmodel/contacts/Contact' where True)"/>
  </contentModel:ItemCollection>

  <contentModel:ItemCollection itsName="untitledItemCollection">
    <displayName>Untitled</displayName>
  </contentModel:ItemCollection>

  <contentModel:ItemCollection itsName="allItemCollection">
    <displayName>All</displayName>
    <_rule value="for i in '//parcels/osaf/contentmodel/Note' where True"/>
  </contentModel:ItemCollection>

  <contentModel:ItemCollection itsName="inItemCollection">
    <displayName>In</displayName>
    <_rule value="for i in '//parcels/osaf/contentmodel/mail/MailMessageMixin' where i.isInbound == True"/>
  </contentModel:ItemCollection>

  <contentModel:ItemCollection itsName="outItemCollection">
    <displayName>Out</displayName>
    <_rule value="for i in '//parcels/osaf/contentmodel/mail/MailMessageMixin' where i.isOutbound == True"/>
  </contentModel:ItemCollection>

  <!-- LayoutSelector -->
  <Toolbar itsName="LayoutSelector">
    <blockName>LayoutSelector</blockName>
    <childrenBlocks itemref="view:ListButton"/>
    <childrenBlocks itemref="view:MonthButton"/>
    <childrenBlocks itemref="view:WeekButton"/>
    <childrenBlocks itemref="view:DayButton"/>
    <!-- Attributes -->
    <toolSize>16,16</toolSize>
    <separatorWidth>100</separatorWidth>
    <stretchFactor>0.0</stretchFactor>
  </Toolbar>

  <BlockEvent itsName="ChangeLayout">
    <blockName>ChangeLayout</blockName>
    <dispatchEnum>BroadcastInsideMyEventBoundary</dispatchEnum>
  </BlockEvent>

  <!--
    ToolbarItems
  -->
  <ToolbarItem itsName="ListButton">
    <blockName>ListButton</blockName>
    <title>List View</title>
    <bitmap>application/images/list.png</bitmap>
    <selectedBitmap></selectedBitmap>
    <toolbarItemKind>Radio</toolbarItemKind>
    <helpString>Display in list view</helpString>
    <event itemref="view:ChangeLayout"/>
  </ToolbarItem>

  <ToolbarItem itsName="MonthButton">
    <blockName>MonthButton</blockName>
    <title>Month View</title>
    <bitmap>application/images/month.png</bitmap>
    <selectedBitmap></selectedBitmap>
    <toolbarItemKind>Radio</toolbarItemKind>
    <helpString>Display in month view</helpString>
    <event itemref="view:ChangeLayout"/>
  </ToolbarItem>

  <ToolbarItem itsName="WeekButton">
    <blockName>WeekButton</blockName>
    <title>Week View</title>
    <bitmap>application/images/week.png</bitmap>
    <selectedBitmap></selectedBitmap>
    <toolbarItemKind>Radio</toolbarItemKind>
    <helpString>Display in week view</helpString>
    <event itemref="view:ChangeLayout"/>
  </ToolbarItem>

  <ToolbarItem itsName="DayButton">
    <blockName>DayButton</blockName>
    <title>Day View</title>
    <bitmap>application/images/day.png</bitmap>
    <selectedBitmap></selectedBitmap>
    <toolbarItemKind>Radio</toolbarItemKind>
    <helpString>Display in day view</helpString>
    <event itemref="view:ChangeLayout"/>
  </ToolbarItem>


  <!-- Calendar Blocks -->
  <CharacterStyle itsName="CalendarTitle">
    <fontStyle>bold</fontStyle>
    <fontSize>10.0</fontSize>
  </CharacterStyle>

  <!-- Mixed Table -->
  <Table itsName="MixedTable">
    <contents itemref="view:mixedItemCollection"/>

    <columnHeadings></columnHeadings>
    <columnHeadings>who</columnHeadings>
    <columnHeadings>about</columnHeadings>
    <columnHeadings>date</columnHeadings>

    <columnData>itsKind</columnData>
    <columnData>who</columnData>
    <columnData>about</columnData>
    <columnData>date</columnData>

    <columnWidths>20</columnWidths>
    <columnWidths>130</columnWidths>
    <columnWidths>130</columnWidths>
    <columnWidths>130</columnWidths>
  </Table>


  <LayoutChooser itsName="CalendarSummary">
    <childrenBlocks itemref="view:LayoutSelector" copy="LayoutSelector"/>
    <choices itemref="view:CalendarTable"/>
    <choices itemref="view:CalendarMonth"/>
    <choices itemref="view:CalendarWeek"/>
    <choices itemref="view:CalendarDay"/>    
    <orientationEnum>Vertical</orientationEnum>
  </LayoutChooser>

  <!-- Calendar Table -->
  <Table itsName="CalendarTable">
    <contents itemref="view:calendarItemCollection"/>

    <columnHeadings></columnHeadings>
    <columnHeadings>who</columnHeadings>
    <columnHeadings>about</columnHeadings>
    <columnHeadings>date</columnHeadings>

    <columnData>itsKind</columnData>
    <columnData>who</columnData>
    <columnData>about</columnData>
    <columnData>date</columnData>
    
    <columnWidths>20</columnWidths>
    <columnWidths>130</columnWidths>
    <columnWidths>130</columnWidths>
    <columnWidths>130</columnWidths>
  </Table>

  <!-- Month -->
  <calendarBlocks:CanvasMonth itsName="CalendarMonth">
    <contents itemref="view:calendarItemCollection"/>
  </calendarBlocks:CanvasMonth>

  <!-- Week -->
  <calendarBlocks:CanvasWeek itsName="CalendarWeek">
    <contents itemref="view:calendarItemCollection"/>
    <daysPerView>7</daysPerView>
  </calendarBlocks:CanvasWeek>

  <!-- Day -->
  <calendarBlocks:CanvasWeek itsName="CalendarDay">
    <contents itemref="view:calendarItemCollection"/>
    <daysPerView>1</daysPerView>
  </calendarBlocks:CanvasWeek>

  <!-- Contacts Table -->
  <Table itsName="ContactsTable">
    <contents itemref="view:contactItemCollection"/>

    <columnHeadings></columnHeadings>
    <columnHeadings>who</columnHeadings>
    <columnHeadings>about</columnHeadings>
    <columnHeadings>date</columnHeadings>

    <columnData>itsKind</columnData>
    <columnData>who</columnData>
    <columnData>about</columnData>
    <columnData>date</columnData>
    
    <columnWidths>20</columnWidths>
    <columnWidths>130</columnWidths>
    <columnWidths>130</columnWidths>
    <columnWidths>130</columnWidths>
  </Table>

  <!-- Notes Table -->
  <Table itsName="NotesTable">
    <contents itemref="view:notesItemCollection"/>

    <columnHeadings></columnHeadings>
    <columnHeadings>who</columnHeadings>
    <columnHeadings>about</columnHeadings>
    <columnHeadings>date</columnHeadings>

    <columnData>itsKind</columnData>
    <columnData>who</columnData>
    <columnData>about</columnData>
    <columnData>date</columnData>
    
    <columnWidths>20</columnWidths>
    <columnWidths>130</columnWidths>
    <columnWidths>130</columnWidths>
    <columnWidths>130</columnWidths>
  </Table>

  <!-- Tasks Table -->
  <Table itsName="TasksTable">
    <contents itemref="view:taskItemCollection"/>

    <columnHeadings></columnHeadings>
    <columnHeadings>who</columnHeadings>
    <columnHeadings>about</columnHeadings>
    <columnHeadings>date</columnHeadings>

    <columnData>itsKind</columnData>
    <columnData>who</columnData>
    <columnData>about</columnData>
    <columnData>date</columnData>
    
    <columnWidths>20</columnWidths>
    <columnWidths>130</columnWidths>
    <columnWidths>130</columnWidths>
    <columnWidths>130</columnWidths>
  </Table>

  <!-- Mail Table -->
  <Table itsName="MailTable">
    <contents itemref="view:mailItemCollection"/>

    <columnHeadings></columnHeadings>
    <columnHeadings>who</columnHeadings>
    <columnHeadings>about</columnHeadings>
    <columnHeadings>date</columnHeadings>

    <columnData>itsKind</columnData>
    <columnData>who</columnData>
    <columnData>about</columnData>
    <columnData>date</columnData>
    
    <columnWidths>20</columnWidths>
    <columnWidths>130</columnWidths>
    <columnWidths>130</columnWidths>
    <columnWidths>130</columnWidths>
  </Table>

  <LayoutChooser itsName="UntitledSummary">
    <childrenBlocks itemref="view:LayoutSelector" copy="LayoutSelector"/>
    <choices itemref="view:UntitledTable"/>
    <choices itemref="view:UntitledMonth"/>
    <choices itemref="view:UntitledWeek"/>
    <choices itemref="view:UntitledDay"/>    
    <orientationEnum>Vertical</orientationEnum>
  </LayoutChooser>

  <!-- Untitled Table -->
  <Table itsName="UntitledTable">
    <contents itemref="view:untitledItemCollection"/>

    <columnHeadings></columnHeadings>
    <columnHeadings>who</columnHeadings>
    <columnHeadings>about</columnHeadings>
    <columnHeadings>date</columnHeadings>

    <columnData>itsKind</columnData>
    <columnData>who</columnData>
    <columnData>about</columnData>
    <columnData>date</columnData>
    
    <columnWidths>20</columnWidths>
    <columnWidths>130</columnWidths>
    <columnWidths>130</columnWidths>
    <columnWidths>130</columnWidths>
  </Table>

  <!-- UntitledMonth -->
  <calendarBlocks:CanvasMonth itsName="UntitledMonth">
    <contents itemref="view:untitledItemCollection"/>
  </calendarBlocks:CanvasMonth>

  <!-- UntitledWeek -->
  <calendarBlocks:CanvasWeek itsName="UntitledWeek">
    <contents itemref="view:untitledItemCollection"/>
    <daysPerView>7</daysPerView>
  </calendarBlocks:CanvasWeek>

  <!-- UntitledDay -->
  <calendarBlocks:CanvasWeek itsName="UntitledDay">
    <contents itemref="view:untitledItemCollection"/>
    <daysPerView>1</daysPerView>
  </calendarBlocks:CanvasWeek>

  <!-- Notes View -->
  <SplitterWindow itsName="NotesView">
    <contents itemref="view:notesItemCollection"/>

    <childrenBlocks itemref="view:NotesTable"/>
    <childrenBlocks itemref="detail:DetailRootTemplate" copy="DetailRoot"/>

    <eventBoundary>True</eventBoundary>
    <orientationEnum>Vertical</orientationEnum>
  </SplitterWindow>

  <!-- Tasks View -->
  <SplitterWindow itsName="TasksView">
    <contents itemref="view:taskItemCollection"/>

    <childrenBlocks itemref="view:TasksTable"/>
    <childrenBlocks itemref="detail:DetailRootTemplate" copy="DetailRoot"/>

    <eventBoundary>True</eventBoundary>
    <orientationEnum>Vertical</orientationEnum>
  </SplitterWindow>

  <!-- Mail View -->
  <SplitterWindow itsName="MailView">
    <contents itemref="view:mailItemCollection"/>

    <childrenBlocks itemref="view:MailTable"/>
    <childrenBlocks itemref="detail:DetailRootTemplate" copy="DetailRoot"/>

    <eventBoundary>True</eventBoundary>
    <orientationEnum>Vertical</orientationEnum>
  </SplitterWindow>

  <!-- Mixed View -->
  <SplitterWindow itsName="MixedView">
    <contents itemref="view:mixedItemCollection"/>

    <childrenBlocks itemref="view:MixedTable"/>
    <childrenBlocks itemref="detail:DetailRootTemplate" copy="DetailRoot"/>

    <eventBoundary>True</eventBoundary>
    <orientationEnum>Vertical</orientationEnum>
  </SplitterWindow>

  <!-- Calendar View -->
  <SplitterWindow itsName="CalendarView">
    <displayName>Calendar Demo</displayName>
    <contents itemref="view:calendarItemCollection"/>

    <childrenBlocks itemref="view:CalendarSummary"/>
    <childrenBlocks itemref="detail:DetailRootTemplate" copy="DetailRoot"/>

    <eventBoundary>True</eventBoundary>
    <orientationEnum>Vertical</orientationEnum>
  </SplitterWindow>

  <!-- Contacts View -->
  <SplitterWindow itsName="ContactsView">
    <contents itemref="view:contactItemCollection"/>

    <childrenBlocks itemref="view:ContactsTable"/>
    <childrenBlocks itemref="detail:DetailRootTemplate" copy="DetailRoot"/>

    <eventBoundary>True</eventBoundary>
    <orientationEnum>Vertical</orientationEnum>
  </SplitterWindow>

  <!-- Untitled View -->
  <SplitterWindow itsName="UntitledView">
    <contents itemref="view:untitledItemCollection"/>

    <childrenBlocks itemref="view:UntitledSummary"/>
    <childrenBlocks itemref="detail:DetailRootTemplate" copy="DetailRoot"/>

    <eventBoundary>True</eventBoundary>
    <orientationEnum>Vertical</orientationEnum>
  </SplitterWindow>

</core:Parcel>
