<core:Parcel describes="//parcels/osaf/views/content"
             itsName="content"
             xmlns="http://osafoundation.org/parcels/osaf/framework/blocks"
             xmlns:core="http://osafoundation.org/parcels/core"
             xmlns:calendarBlocks="http://osafoundation.org/parcels/osaf/framework/blocks/calendar"
             xmlns:contentModel="http://osafoundation.org/parcels/osaf/contentmodel"
             xmlns:calendarModel="http://osafoundation.org/parcels/osaf/contentmodel/calendar"
             xmlns:mailModel="http://osafoundation.org/parcels/osaf/contentmodel/mail"
             xmlns:taskModel="http://osafoundation.org/parcels/osaf/contentmodel/tasks"
             xmlns:contactsModel="http://osafoundation.org/parcels/osaf/contentmodel/contacts"
             xmlns:detail="http://osafoundation.org/parcels/osaf/framework/blocks/detail"
             xmlns:view="http://osafoundation.org/parcels/osaf/views/content"
	     xmlns:events="http://osafoundation.org/parcels/osaf/framework/blocks/Events">

  <core:version>0.3</core:version>

  <!-- Queries -->
  <contentModel:Query itsName="calendarQuery">
     <data itemref="calendarModel:CalendarEventAspect"/>
  </contentModel:Query>
  <contentModel:NamedCollection itsName="calendarItemCollection">
    <rule itemref="view:calendarQuery"/>
  </contentModel:NamedCollection>

  <contentModel:Query itsName="notesQuery">
    <data itemref="contentModel:Note"/>
  </contentModel:Query>
  <contentModel:NamedCollection itsName="notesItemCollection">
    <rule itemref="view:notesQuery"/>
  </contentModel:NamedCollection>

  <contentModel:Query itsName="taskQuery">
    <data itemref="taskModel:TaskAspect"/>
  </contentModel:Query>
  <contentModel:NamedCollection itsName="taskItemCollection">
    <rule itemref="view:taskQuery"/>
  </contentModel:NamedCollection>

  <contentModel:Query itsName="mailQuery">
    <data itemref="mailModel:MailMessageAspect"/>
  </contentModel:Query>
  <contentModel:NamedCollection itsName="mailItemCollection">
    <rule itemref="view:mailQuery"/>
  </contentModel:NamedCollection>

  <contentModel:Query itsName="contactQuery">
    <data itemref="contactsModel:Contact"/>
  </contentModel:Query>
  <contentModel:NamedCollection itsName="contactItemCollection">
    <rule itemref="view:contactQuery"/>
  </contentModel:NamedCollection>

  <contentModel:Query itsName="mixedQuery">
    <data itemref="calendarModel:CalendarEvent"/>
    <data itemref="contentModel:Note"/>
    <data itemref="contactsModel:Contact"/>
  </contentModel:Query>
  <contentModel:NamedCollection itsName="mixedItemCollection">
    <rule itemref="view:mixedQuery"/>
  </contentModel:NamedCollection>

  <contentModel:Query itsName="inQuery">
  </contentModel:Query>
  <contentModel:NamedCollection itsName="inItemCollection">
    <rule itemref="view:inQuery"/>
  </contentModel:NamedCollection>

  <contentModel:Query itsName="outQuery">
  </contentModel:Query>
  <contentModel:NamedCollection itsName="outItemCollection">
    <rule itemref="view:outQuery"/>
  </contentModel:NamedCollection>

  <contentModel:Query itsName="junkQuery">
  </contentModel:Query>
  <contentModel:NamedCollection itsName="junkItemCollection">
    <rule itemref="view:junkQuery"/>
  </contentModel:NamedCollection>

  <contentModel:Query itsName="trashQuery">
  </contentModel:Query>
  <contentModel:NamedCollection itsName="trashItemCollection">
    <rule itemref="view:trashQuery"/>
  </contentModel:NamedCollection>

  <!-- Calendar List -->
  <Table itsName="CalendarList">
    <contents itemref="view:calendarItemCollection"/>

    <columnData>who</columnData>
    <columnData>about</columnData>
    <columnData>date</columnData>
    <columnWidths>270</columnWidths>
    <columnWidths>150</columnWidths>
    <columnWidths>170</columnWidths>
  </Table>

  <!-- Contact List -->
  <List itsName="ContactList">
    <contents itemref="view:contactItemCollection"/>

    <elementDelegate>osaf.views.content.Content.ContactListDelegate</elementDelegate>
    
    <columnData>First Name</columnData>
    <columnData>Last Name</columnData>
    <columnData>Telephone</columnData>
    <columnData>Address</columnData>
    <columnWidths>140</columnWidths>
    <columnWidths>140</columnWidths>
    <columnWidths>130</columnWidths>
    <columnWidths>240</columnWidths>
  </List>

  <!-- Calendar Blocks -->
  <CharacterStyle itsName="CalendarTitle">
    <fontStyle>bold</fontStyle>
    <fontSize>10.0</fontSize>
  </CharacterStyle>

  <!-- Month -->
  <calendarBlocks:MonthBlock itsName="SummaryMonth">
    <contents itemref="view:calendarItemCollection"/>

    <daysPerWeek>7</daysPerWeek>
    <weeksPerView>6</weeksPerView>
    <offset>60</offset>

    <characterStyle itemref="view:CalendarTitle"/>
  </calendarBlocks:MonthBlock>

  <!-- Week -->
  <calendarBlocks:WeekBlock itsName="SummaryWeek">
    <contents itemref="view:calendarItemCollection"/>

    <daysPerView>7</daysPerView>
    <hoursPerView>16</hoursPerView>
    <offset>60</offset>

    <characterStyle itemref="view:CalendarTitle"/>
  </calendarBlocks:WeekBlock>

  <!-- Day -->
  <calendarBlocks:WeekBlock itsName="SummaryDay">
    <contents itemref="view:calendarItemCollection"/>

    <daysPerView>1</daysPerView>
    <hoursPerView>16</hoursPerView>
    <offset>60</offset>

    <characterStyle itemref="view:CalendarTitle"/>
  </calendarBlocks:WeekBlock>

  <!-- Mixed List -->
  <List itsName="MixedList">
    <contents itemref="view:mixedItemCollection"/>

    <columnData>who</columnData>
    <columnData>about</columnData>
    <columnData>date</columnData>

    <columnWidths>270</columnWidths>
    <columnWidths>150</columnWidths>
    <columnWidths>170</columnWidths>
  </List>

  <!-- In List -->
  <Table itsName="InList">
    <contents itemref="view:inItemCollection"/>

    <columnData>who</columnData>
    <columnData>about</columnData>
    <columnData>date</columnData>

    <columnWidths>270</columnWidths>
    <columnWidths>150</columnWidths>
    <columnWidths>170</columnWidths>
  </Table>

  <!-- Out List -->
  <Table itsName="OutList">
    <contents itemref="view:outItemCollection"/>

    <columnData>who</columnData>
    <columnData>about</columnData>
    <columnData>date</columnData>

    <columnWidths>270</columnWidths>
    <columnWidths>150</columnWidths>
    <columnWidths>170</columnWidths>
  </Table>

  <!-- Calendar List -->
  <Table itsName="CalendarList">
    <contents itemref="view:calendarItemCollection"/>

    <columnData>who</columnData>
    <columnData>about</columnData>
    <columnData>date</columnData>

    <columnWidths>270</columnWidths>
    <columnWidths>150</columnWidths>
    <columnWidths>170</columnWidths>
  </Table>

  <!-- New Contact List -->
  <Table itsName="NewContactList">
    <contents itemref="view:contactItemCollection"/>

    <columnData>who</columnData>
    <columnData>about</columnData>
    <columnData>date</columnData>

    <columnWidths>270</columnWidths>
    <columnWidths>150</columnWidths>
    <columnWidths>170</columnWidths>
  </Table>

  <!-- Note List -->
  <Table itsName="NoteList">
    <contents itemref="view:notesItemCollection"/>

    <columnData>who</columnData>
    <columnData>about</columnData>
    <columnData>date</columnData>

    <columnWidths>270</columnWidths>
    <columnWidths>150</columnWidths>
    <columnWidths>170</columnWidths>
  </Table>

  <!-- Task List -->
  <Table itsName="TaskList">
    <contents itemref="view:taskItemCollection"/>

    <columnData>who</columnData>
    <columnData>about</columnData>
    <columnData>date</columnData>

    <columnWidths>270</columnWidths>
    <columnWidths>150</columnWidths>
    <columnWidths>170</columnWidths>
  </Table>

  <!-- Mail List -->
  <Table itsName="MailList">
    <contents itemref="view:mailItemCollection"/>

    <columnData>who</columnData>
    <columnData>about</columnData>
    <columnData>date</columnData>

    <columnWidths>270</columnWidths>
    <columnWidths>150</columnWidths>
    <columnWidths>170</columnWidths>
  </Table>

  <!-- Junk List -->
  <Table itsName="JunkList">
    <contents itemref="view:junkItemCollection"/>

    <columnData>who</columnData>
    <columnData>about</columnData>
    <columnData>date</columnData>

    <columnWidths>270</columnWidths>
    <columnWidths>150</columnWidths>
    <columnWidths>170</columnWidths>
  </Table>

  <!-- Trash List -->
  <Table itsName="TrashList">
    <contents itemref="view:trashItemCollection"/>

    <columnData>who</columnData>
    <columnData>about</columnData>
    <columnData>date</columnData>

    <columnWidths>270</columnWidths>
    <columnWidths>150</columnWidths>
    <columnWidths>170</columnWidths>
  </Table>

  <ItemDetail itsName="ContactDetail"
              itemClass="osaf.views.content.Content.ContentItemDetail">
  </ItemDetail>

  <ItemDetail itsName="MixedItemDetail"
              itemClass="osaf.views.content.Content.ContentItemDetail">
  </ItemDetail>

  <ItemDetail itsName="NewContactItemDetail"
              itemClass="osaf.views.content.Content.ContentItemDetail">
  </ItemDetail>

  <ItemDetail itsName="JunkItemDetail"
              itemClass="osaf.views.content.Content.ContentItemDetail">
  </ItemDetail>

  <ItemDetail itsName="TrashItemDetail"
              itemClass="osaf.views.content.Content.ContentItemDetail">
  </ItemDetail>

  <ItemDetail itsName="MonthItemDetail"
              itemClass="osaf.views.content.Content.ContentItemDetail">
  </ItemDetail>

  <ItemDetail itsName="WeekItemDetail"
              itemClass="osaf.views.content.Content.ContentItemDetail">
  </ItemDetail>

  <ItemDetail itsName="DayItemDetail"
              itemClass="osaf.views.content.Content.ContentItemDetail">
  </ItemDetail>

  <!-- Note View -->
  <SplitterWindow itsName="NoteListView">
    <displayName>NoteList</displayName>

    <childrenBlocks itemref="view:NoteList"/>
    <childrenBlocks itemref="detail:DetailRoot"/>

    <eventBoundary>True</eventBoundary>
    <border>1.0, 1.0, 1.0, 1.0</border>
    <splitPercentage>0.2</splitPercentage>
  </SplitterWindow>

  <!-- Task View -->
  <SplitterWindow itsName="TaskListView">
    <displayName>TaskList</displayName>

    <childrenBlocks itemref="view:TaskList"/>
    <childrenBlocks itemref="detail:DetailRoot" copy="DetailRoot"/>

    <eventBoundary>True</eventBoundary>
    <border>1.0, 1.0, 1.0, 1.0</border>
    <splitPercentage>0.2</splitPercentage>
  </SplitterWindow>

  <!-- Mail View -->
  <SplitterWindow itsName="MailListView">
    <displayName>MailList</displayName>

    <childrenBlocks itemref="view:MailList"/>
    <childrenBlocks itemref="detail:DetailRoot" copy="DetailRoot"/>

    <eventBoundary>True</eventBoundary>
    <border>1.0, 1.0, 1.0, 1.0</border>
    <splitPercentage>0.2</splitPercentage>
  </SplitterWindow>

  <!-- Contacts View -->
  <SplitterWindow itsName="ContactListView">
    <displayName>OldContacts</displayName>

    <childrenBlocks itemref="view:ContactList"/>
    <childrenBlocks itemref="view:ContactDetail"/>

    <eventBoundary>True</eventBoundary>
    <border>1.0, 1.0, 1.0, 1.0</border>
  </SplitterWindow>

  <!-- Mixed View -->
  <SplitterWindow itsName="MixedListView">
    <displayName>Mixed</displayName>

    <childrenBlocks itemref="view:MixedList"/>
    <childrenBlocks itemref="detail:DetailRoot" copy="DetailRoot"/>

    <eventBoundary>True</eventBoundary>
    <border>1.0, 1.0, 1.0, 1.0</border>
  </SplitterWindow>

  <!-- In View -->
  <SplitterWindow itsName="InListView">
    <displayName>In</displayName>
    <childrenBlocks itemref="view:InList"/>
    <childrenBlocks itemref="detail:DetailRoot" copy="DetailRoot"/>

    <eventBoundary>True</eventBoundary>
    <border>1.0, 1.0, 1.0, 1.0</border>
    <splitPercentage>0.2</splitPercentage>
  </SplitterWindow>

  <!-- Out View -->
  <SplitterWindow itsName="OutListView">
    <displayName>Out</displayName>

    <childrenBlocks itemref="view:OutList"/>
    <childrenBlocks itemref="detail:DetailRoot" copy="DetailRoot"/>

    <eventBoundary>True</eventBoundary>
    <border>1.0, 1.0, 1.0, 1.0</border>
    <splitPercentage>0.2</splitPercentage>
  </SplitterWindow>

  <!-- Calendar View -->
  <SplitterWindow itsName="CalendarListView">
    <displayName>Calendar</displayName>

    <childrenBlocks itemref="view:CalendarList"/>
    <childrenBlocks itemref="detail:DetailRoot" copy="DetailRoot"/>

    <eventBoundary>True</eventBoundary>
    <border>1.0, 1.0, 1.0, 1.0</border>
    <splitPercentage>0.2</splitPercentage>
  </SplitterWindow>

  <!-- New Contact View -->
  <SplitterWindow itsName="NewContactListView">
    <displayName>Contacts</displayName>

    <childrenBlocks itemref="view:NewContactList"/>
    <childrenBlocks itemref="view:NewContactItemDetail"/>

    <eventBoundary>True</eventBoundary>
    <border>1.0, 1.0, 1.0, 1.0</border>
  </SplitterWindow>

  <!-- Junk View -->
  <SplitterWindow itsName="JunkListView">
    <displayName>Junk</displayName>

    <childrenBlocks itemref="view:JunkList"/>
    <childrenBlocks itemref="view:JunkItemDetail"/>

    <eventBoundary>True</eventBoundary>
    <border>1.0, 1.0, 1.0, 1.0</border>
  </SplitterWindow>

  <!-- Trash View -->
  <SplitterWindow itsName="TrashListView">
    <displayName>Trash</displayName>

    <childrenBlocks itemref="view:TrashList"/>
    <childrenBlocks itemref="view:TrashItemDetail"/>

    <eventBoundary>True</eventBoundary>
    <border>1.0, 1.0, 1.0, 1.0</border>
  </SplitterWindow>

  <!-- MonthView View -->
  <SplitterWindow itsName="MonthView">
    <displayName>Month</displayName>

    <childrenBlocks itemref="view:SummaryMonth"/>
    <childrenBlocks itemref="view:MonthItemDetail"/>

    <eventBoundary>True</eventBoundary>
    <border>1.0, 1.0, 1.0, 1.0</border>
  </SplitterWindow>

  <!-- Week View -->
  <SplitterWindow itsName="WeekView">
    <displayName>Week</displayName>

    <childrenBlocks itemref="view:SummaryWeek"/>
    <childrenBlocks itemref="view:WeekItemDetail"/>

    <eventBoundary>True</eventBoundary>
    <border>1.0, 1.0, 1.0, 1.0</border>
  </SplitterWindow>

  <!-- Day View -->
  <SplitterWindow itsName="DayView">
    <displayName>Day</displayName>

    <childrenBlocks itemref="view:SummaryDay"/>
    <childrenBlocks itemref="view:DayItemDetail"/>

    <eventBoundary>True</eventBoundary>
    <border>1.0, 1.0, 1.0, 1.0</border>
  </SplitterWindow>

</core:Parcel>
