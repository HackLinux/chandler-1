<core:Parcel describes="//parcels/osaf/views/repositoryviewer"
             itsName="repositoryviewer"
             xmlns:core="http://osafoundation.org/parcels/core"
             xmlns="http://osafoundation.org/parcels/osaf/framework/blocks"
             xmlns:doc="http://osafoundation.org/parcels/osaf/views/repositoryviewer"
             xmlns:events="http://osafoundation.org/parcels/osaf/framework/blocks/Events">

  <core:version>0.3</core:version>

  <!--
    Menus
  -->
  <Menu itsName="RepositoryMenu">
    <title>Repository Viewer</title>
    <helpString></helpString>
  </Menu>

  <!--
    Menu Items
  -->
  <MenuItem itsName="BlankItem">
    <title>Do Something...</title>
    <location>RepositoryMenu</location>
    <menuItemKind>Normal</menuItemKind>
    <helpString>Not yet implemented</helpString>
    <event itemref="doc:dummyEvent"/>
  </MenuItem>

  <!-- 
    Events
   -->

  <BlockEvent itsName="dummyEvent">
    <dispatchEnum>BroadcastEverywhere</dispatchEnum>
    <methodName>OndummyEvent</methodName>
  </BlockEvent>

  <!--
    Layout blocks
  -->
  <Tree itsName="RepositoryTree">
    <!-- Attributes -->
    <elementDelegate>osaf.views.repositoryviewer.Repository.RepositoryDelegate</elementDelegate>

    <hideRoot>False</hideRoot>
    <noLines>False</noLines>
    <columnData>Item Name</columnData>
    <columnData>Display Name</columnData>
    <columnData>Kind</columnData>
    <columnData>UUID</columnData>
    <columnData>Path</columnData>    
    <columnWidths>160</columnWidths>
    <columnWidths>110</columnWidths>
    <columnWidths>70</columnWidths>
    <columnWidths>245</columnWidths>
    <columnWidths>155</columnWidths>

    <size>600,200</size>
    <minimumSize>400,100</minimumSize>
  </Tree>
 
  <ItemDetail itsName="ItemDetail"
              itemClass="osaf.views.repositoryviewer.Repository.RepositoryItemDetail">
    <!-- Attributes -->
    <size>100,50</size>
    <minimumSize>100,50</minimumSize>
  </ItemDetail>

  <BoxContainer itsName="RepositoryBox">
    <displayName>Repository</displayName>

    <!-- Layout children -->
    <childrenBlocks itemref="doc:RepositorySplit"/>
    <childrenBlocks itemref="doc:BlankItem"/>
    <childrenBlocks itemref="doc:RepositoryMenu"/>
  </BoxContainer>
  
  <SplitterWindow itsName="RepositorySplit">
    <!-- Layout children -->
    <childrenBlocks itemref="doc:RepositoryTree"/>
    <childrenBlocks itemref="doc:ItemDetail"/>

    <!-- Attributes -->
    <eventBoundary>True</eventBoundary>
  </SplitterWindow>
  
</core:Parcel>
