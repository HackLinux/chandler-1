<core:Parcel describes="//parcels/osaf/views/main"
             itemName="main"
             xmlns:core="//Schema/Core"
             xmlns="//parcels/osaf/framework/blocks"
             xmlns:doc="//parcels/osaf/views/main"
             xmlns:events="//parcels/osaf/framework/blocks/Events"
             xmlns:repository="//parcels/osaf/views/repositoryviewer"
             xmlns:demo="//parcels/osaf/views/demo"
             xmlns:content="//parcels/osaf/views/content"
             xmlns:zaobao="//parcels/osaf/views/zaobao">

  <core:version>0.3</core:version>

  <!--
    Events
  -->

  <BlockEvent itemName="ShowHideSidebar">
    <dispatchEnum>SendToBlock</dispatchEnum>
    <methodName>OnShowHide</methodName>
    <dispatchToBlock itemref="doc:Sidebar"/>
  </BlockEvent>

  <BlockEvent itemName="ShowHideBookmarksBar">
    <dispatchEnum>SendToBlock</dispatchEnum>
    <methodName>OnShowHide</methodName>
    <dispatchToBlock itemref="doc:BookmarksBar"/>
  </BlockEvent>

  <BlockEvent itemName="ShowHideStatusBar">
    <dispatchEnum>SendToBlock</dispatchEnum>
    <methodName>OnShowHide</methodName>
    <dispatchToBlock itemref="doc:StatusBar"/>
  </BlockEvent>

  <!--
    Menus
  -->
  <Menu itemName="FileMenu">
    <title>File</title>
  </Menu>

  <Menu itemName="EditMenu">
    <title>Edit</title>
  </Menu>
    
  <Menu itemName="ViewMenu">
    <title>View</title>
  </Menu>

  <Menu itemName="TestMenu">
    <title>Test</title>
  </Menu>

  <!--
    Menu Items
  -->
  <MenuItem itemName="NewTabItem">
    <title>New Tab</title>
    <menuLocation>FileMenu</menuLocation>
    <accel>N</accel>
    <helpString>Open a new blank tab</helpString>
    <event itemref="events:New"/>
  </MenuItem>
  
  <MenuItem itemName="CloseTabItem">
    <title>Close Tab</title>
    <menuLocation>FileMenu</menuLocation>
    <accel>W</accel>
    <helpString>Close the current tab</helpString>
    <event itemref="events:Close"/>
  </MenuItem>
  
  <MenuItem itemName="FileSeparator1">
    <menuLocation>FileMenu</menuLocation>
    <menuItemKind>Separator</menuItemKind>
  </MenuItem>
  
  <MenuItem itemName="QuitItem">
    <title>Quit</title>
    <menuLocation>FileMenu</menuLocation>
    <accel>Q</accel>
    <helpString>Quit Chandler</helpString>
    <event itemref="events:Quit"/>
  </MenuItem>
  
  <MenuItem itemName="UndoItem">
    <title>Undo</title>
    <menuLocation>EditMenu</menuLocation>
    <accel>Z</accel>
    <event itemref="events:Undo"/>
  </MenuItem>

  <MenuItem itemName="RedoItem">
    <title>Redo</title>
    <menuLocation>EditMenu</menuLocation>
    <accel>Y</accel>
    <event itemref="events:Redo"/>
  </MenuItem>

  <MenuItem itemName="EditSeparator1">
    <menuLocation>EditMenu</menuLocation>
    <menuItemKind>Separator</menuItemKind>
  </MenuItem>
  
  <MenuItem itemName="CutItem">
    <title>Cut</title>
    <menuLocation>EditMenu</menuLocation>
    <accel>X</accel>
    <event itemref="events:Cut"/>
  </MenuItem>

  <MenuItem itemName="CopyItem">
    <title>Copy</title>
    <menuLocation>EditMenu</menuLocation>
    <accel>C</accel>
    <event itemref="events:Copy"/>
  </MenuItem>

  <MenuItem itemName="PasteItem">
    <title>Paste</title>
    <menuLocation>EditMenu</menuLocation>
    <accel>V</accel>
    <event itemref="events:Paste"/>
  </MenuItem>
  
  <MenuItem itemName="EditSeparator2">
    <menuLocation>EditMenu</menuLocation>
    <menuItemKind>Separator</menuItemKind>
  </MenuItem>
  
  <MenuItem itemName="PreferencesItem">
    <title>Preferences</title>
    <menuLocation>EditMenu</menuLocation>
    <event itemref="events:Preferences"/>
  </MenuItem>

  <MenuItem itemName="ViewSideBarItem">
    <title>View Sidebar</title>
    <menuLocation>ViewMenu</menuLocation>
    <menuItemKind>Check</menuItemKind>
    <event itemref="doc:ShowHideSidebar"/>
  </MenuItem>

  <MenuItem itemName="ViewNavigationBarItem">
    <title>View Navigation Bar</title>
    <menuLocation>ViewMenu</menuLocation>
    <menuItemKind>Check</menuItemKind>
    <event itemref="events:ViewNavigationBar"/>
  </MenuItem>

  <MenuItem itemName="ViewBookmarksBarItem">
    <title>View Bookmarks Bar</title>
    <menuLocation>ViewMenu</menuLocation>
    <menuItemKind>Check</menuItemKind>
    <event itemref="doc:ShowHideBookmarksBar"/>
  </MenuItem>

  <MenuItem itemName="ViewStatusBarItem">
    <title>View Status Bar</title>
    <menuLocation>ViewMenu</menuLocation>
    <menuItemKind>Check</menuItemKind>
    <event itemref="doc:ShowHideStatusBar"/>
  </MenuItem>

  <MenuItem itemName="GenerateAllItem">
    <title>Generate Content Items</title>
    <menuLocation>TestMenu</menuLocation>
    <event itemref="events:GenerateContentItems"/>
    <helpString>generates sample items: 5 contacts, 5 notes, 5 events</helpString>
  </MenuItem>

  <MenuItem itemName="GenerateContactItem">
    <title>Generate Contacts</title>
    <menuLocation>TestMenu</menuLocation>
    <event itemref="events:GenerateContacts"/>
    <helpString>generates 10 sample contacts</helpString>
  </MenuItem>

  <MenuItem itemName="GenerateCalendarItem">
    <title>Generate Calendar Events</title>
    <menuLocation>TestMenu</menuLocation>
    <event itemref="events:GenerateCalendarEvents"/>
    <helpString>generates 10 sample calendar events</helpString>
  </MenuItem>

  <MenuItem itemName="GenerateNoteItem">
    <title>Generate Notes</title>
    <menuLocation>TestMenu</menuLocation>
    <event itemref="events:GenerateNotes"/>
    <helpString>Generate 10 notes</helpString>
  </MenuItem>

  <MenuItem itemName="ImportContactItem">
    <title>Import Contacts from Outlook CSV</title>
    <menuLocation>TestMenu</menuLocation>
    <event itemref="events:ImportContacts"/>
    <helpString>import Contacts from contacts.csv</helpString>
  </MenuItem>

  <MenuItem itemName="CheckRepositoryItem">
    <title>Check Repository</title>
    <menuLocation>TestMenu</menuLocation>
    <event itemref="events:CheckRepository"/>
    <helpString>run check() on the current view</helpString>
  </MenuItem>

  <!--
    Toolbars
  -->
  <NavigationBar itemName="NavigationBar">
    <!-- Attributes -->
    <toolSize>13,13</toolSize>
  </NavigationBar>

  <!--
    ToolbarItems
  -->
  <ToolbarItem itemName="BackButton">
    <!-- Attributes -->
    <toolbarLocation>NavigationBar</toolbarLocation>
    <title>Back</title>
    <bitmap>application/images/back.png</bitmap>
    <selectedBitmap></selectedBitmap>
    <toolbarItemKind>Button</toolbarItemKind>
    <statusMessage>Go to the previous view</statusMessage>
  </ToolbarItem>

  <ToolbarItem itemName="ForwardButton">
    <!-- Attributes -->
    <toolbarLocation>NavigationBar</toolbarLocation>
    <title>Forward</title>
    <bitmap>application/images/forward.png</bitmap>
    <selectedBitmap></selectedBitmap>
    <toolbarItemKind>Button</toolbarItemKind>
    <statusMessage>Go to the next view</statusMessage>
  </ToolbarItem>

  <ToolbarItem itemName="RefreshButton">
    <!-- Attributes -->
    <toolbarLocation>NavigationBar</toolbarLocation>
    <title>Forward</title>
    <bitmap>application/images/refresh.png</bitmap>
    <selectedBitmap></selectedBitmap>
    <toolbarItemKind>Button</toolbarItemKind>
    <statusMessage>Refresh the current view</statusMessage>
  </ToolbarItem>

  <ToolbarItem itemName="Spacer">
    <!-- Attributes -->
    <toolbarLocation>Toolbar</toolbarLocation>
    <toolbarItemKind>Separator</toolbarItemKind>
  </ToolbarItem>

  <ToolbarItem itemName="URLBox">
    <!-- Attributes -->
    <toolbarLocation>NavigationBar</toolbarLocation>
    <title>URLBox</title>
    <toolbarItemKind>Text</toolbarItemKind>
    <statusMessage></statusMessage>
  </ToolbarItem>

  <!--
    Status Bar
  -->
  <StatusBar itemName="StatusBar">
  </StatusBar>

  <!-- 
    About Chandler View 
  -->
  <HTML itemName="AboutChandlerHTML">
    <url>application/welcome.html</url>
    <eventBoundary>True</eventBoundary>
    <border>1.0, 1.0, 1.0, 1.0</border>
  </HTML>

  <!--
    Sidebar locations
  -->
  <Node itemName="URLRoot">
    <displayName></displayName>
    <children itemref="doc:AboutChandler"/>
    <children itemref="doc:Repository"/>
    <children itemref="doc:Demo"/>
    <children itemref="doc:ZaoBao"/>
    <children itemref="doc:MixedView"/>
    <children itemref="doc:CalendarView"/>
    <children itemref="doc:ContactsView"/>
    <children itemref="doc:NotesView"/>
    <children itemref="doc:MonthView"/>
    <children itemref="doc:WeekView"/>
  </Node>

  <Node itemName="AboutChandler">
    <displayName>About Chandler</displayName>
    <item itemref="doc:AboutChandlerHTML"/>
  </Node>

  <Node itemName="Repository">
    <displayName>Repository</displayName>
    <item itemref="repository:RepositoryBox"/>
  </Node>

  <Node itemName="Demo">
    <displayName>Block Demo</displayName>
    <item itemref="demo:TabBox"/>
  </Node>

  <Node itemName="ZaoBao">
    <displayName>ZaoBao</displayName>
    <item itemref="zaobao:AboutZaoBao"/>
    <children itemref="doc:OSAFRSS"/>
    <children itemref="doc:ZaoBaoRSS"/>
    <children itemref="doc:ChandlerWikiRSS"/>
    <children itemref="doc:JungleWikiRSS"/>
    <children itemref="doc:TedRSS"/>
    <children itemref="doc:ChaoRSS"/>
    <children itemref="doc:LessigRSS"/>
    <children itemref="doc:MarkRSS"/>
  </Node>

  <Node itemName="OSAFRSS">
    <displayName>OSAF News</displayName>
    <item itemref="zaobao:ZaoBaoChannelView"/>
  </Node>
  <Node itemName="TedRSS">
    <displayName>Ted Leung on the air</displayName>
    <item itemref="zaobao:ted_ZaoBaoChannelView"/>
  </Node>
  <Node itemName="ChandlerWikiRSS">
    <displayName>Chandler Wiki</displayName>
    <item itemref="zaobao:chandlerwiki_ZaoBaoChannelView"/>
  </Node>
  <Node itemName="JungleWikiRSS">
    <displayName>Jungle Wiki</displayName>
    <item itemref="zaobao:junglewiki_ZaoBaoChannelView"/>
  </Node>
  <Node itemName="ZaoBaoRSS">
    <displayName>ZaoBao News</displayName>
    <item itemref="zaobao:zaobao_ZaoBaoChannelView"/>
  </Node>
  <Node itemName="ChaoRSS">
    <displayName>Chao's Blog</displayName>
    <item itemref="zaobao:chao_ZaoBaoChannelView"/>
  </Node>
  <Node itemName="LessigRSS">
    <displayName>Lessig Blog</displayName>
    <item itemref="zaobao:lessig_ZaoBaoChannelView"/>
  </Node>

  <Node itemName="MarkRSS">
    <displayName>dive in to mark</displayName>
    <item itemref="zaobao:mark_ZaoBaoChannelView"/>
  </Node>

  <Node itemName="CalendarView">
    <displayName>Calendar</displayName>
    <item itemref="content:CalendarListView"/>
  </Node>

  <Node itemName="ContactsView">
    <displayName>Contacts</displayName>
    <item itemref="content:ContactListView"/>
  </Node>

  <Node itemName="NotesView">
    <displayName>Notes</displayName>
    <item itemref="content:NoteListView"/>
  </Node>

  <Node itemName="MixedView">
    <displayName>Mixed</displayName>
    <item itemref="content:MixedListView"/>
  </Node>

  <Node itemName="MonthView">
    <displayName>Month</displayName>
    <item itemref="content:MonthView"/>
  </Node>

  <Node itemName="WeekView">
    <displayName>Week</displayName>
    <item itemref="content:WeekView"/>
  </Node>

  <!--
    Bookmarks
  -->
  <Node itemName="BookmarksRoot">
    <displayName></displayName>
    <children itemref="doc:RepositoryBookmark"/>
    <children itemref="doc:ZaoBaoBookmark"/>
    <children itemref="doc:ContactsViewBookmark"/>
  </Node>

  <Node itemName="RepositoryBookmark">
    <displayName>Repository</displayName>
    <item itemref="repository:RepositoryBox"/>
  </Node>

  <Node itemName="ZaoBaoBookmark">
    <displayName>ZaoBao</displayName>
    <item itemref="zaobao:ZaoBaoView"/>
  </Node>
  
  <Node itemName="ContactsViewBookmark">
    <displayName>Contacts</displayName>
    <item itemref="content:ContactListView"/>
  </Node>

  <!--
    Layout blocks
  -->
  <TabbedContainer itemName="TabbedView"
                   itemClass="osaf.views.main.TabbedView.TabbedView">
    <!-- Layout children -->
    <childrenBlocks itemref="doc:AboutChandlerHTML"/>

    <!-- Attributes -->
    <tabPosEnum>Top</tabPosEnum>
    <tabNames>About Chandler</tabNames>
    
    <border>3.0, 3.0, 3.0, 3.0</border>
  </TabbedContainer>  

  <Tree itemName="Sidebar">
    <!-- Attributes -->
    <elementDelegate>osaf.views.main.SideBar.SideBarDelegate</elementDelegate>
    <selection itemref="doc:AboutChandler"/>

    <useButtons>False</useButtons>
    <rootPath  itemref="doc:URLRoot"/>
  </Tree>
 
  <BookmarksBar itemName="BookmarksBar">
    <!-- Attributes -->
    <bookmarksPath itemref="doc:BookmarksRoot"/>
    <border>2.0, 2.0, 2.0, 2.0</border>
    <stretchFactor>0.0</stretchFactor>
  </BookmarksBar>

  <SplitterWindow itemName="MainSplitter">
    <!-- Layout children -->
    <childrenBlocks itemref="doc:Sidebar"/>
    <childrenBlocks itemref="doc:TabbedView"/>

    <!-- Attributes -->
    <orientationEnum>Vertical</orientationEnum>
    <splitPercentage>0.25</splitPercentage>
    <border>2.0, 2.0, 2.0, 2.0</border>
  </SplitterWindow>
  
  <BoxContainer itemName="MainBoxContainer">
    <!-- Layout children -->
    <childrenBlocks itemref="doc:BookmarksBar"/>
    <childrenBlocks itemref="doc:MainSplitter"/>
    
    <!-- Attributes -->
    <orientationEnum>Vertical</orientationEnum>
    <border>2.0, 2.0, 2.0, 2.0</border>
  </BoxContainer>

  <View itemName="MainView"
        itemClass="osaf.views.main.Main.MainView">

    <!-- Menus -->
    <childrenBlocks itemref="doc:FileMenu"/>
    <childrenBlocks itemref="doc:NewTabItem"/>
    <childrenBlocks itemref="doc:CloseTabItem"/>
    <childrenBlocks itemref="doc:FileSeparator1"/>
    <childrenBlocks itemref="doc:QuitItem"/>
    <childrenBlocks itemref="doc:EditMenu"/>
    <childrenBlocks itemref="doc:UndoItem"/>
    <childrenBlocks itemref="doc:RedoItem"/>
    <childrenBlocks itemref="doc:EditSeparator1"/>
    <childrenBlocks itemref="doc:CutItem"/>
    <childrenBlocks itemref="doc:CopyItem"/>
    <childrenBlocks itemref="doc:PasteItem"/>
    <childrenBlocks itemref="doc:EditSeparator2"/>
    <childrenBlocks itemref="doc:PreferencesItem"/>
    <childrenBlocks itemref="doc:ViewMenu"/>
    <childrenBlocks itemref="doc:ViewSideBarItem"/>
    <childrenBlocks itemref="doc:ViewNavigationBarItem"/>
    <childrenBlocks itemref="doc:ViewBookmarksBarItem"/>
    <childrenBlocks itemref="doc:ViewStatusBarItem"/>
    <childrenBlocks itemref="doc:TestMenu"/>
    <childrenBlocks itemref="doc:GenerateAllItem"/>
    <childrenBlocks itemref="doc:GenerateContactItem"/>
    <childrenBlocks itemref="doc:GenerateCalendarItem"/>
    <childrenBlocks itemref="doc:GenerateNoteItem"/>
    <childrenBlocks itemref="doc:ImportContactItem"/>
    <childrenBlocks itemref="doc:CheckRepositoryItem"/>
    
    <!-- Toolbar -->
    <childrenBlocks itemref="doc:NavigationBar"/>
    <childrenBlocks itemref="doc:BackButton"/>
    <childrenBlocks itemref="doc:ForwardButton"/>
    <childrenBlocks itemref="doc:RefreshButton"/>
    <childrenBlocks itemref="doc:Spacer"/>
    <childrenBlocks itemref="doc:URLBox"/>
    
    <!-- StatusBar -->
    <childrenBlocks itemref="doc:StatusBar"/>

    <!-- Layout children -->
    <childrenBlocks itemref="doc:MainBoxContainer"/>
    
    <!-- Block Events -->
    <blockEvents itemref="doc:ShowHideSidebar"/>
    <blockEvents itemref="doc:ShowHideBookmarksBar"/>
    <blockEvents itemref="doc:ShowHideStatusBar"/>

    <!-- Attributes -->
    <orientationEnum>Vertical</orientationEnum>

    <size>800,650</size>
    <border>10.0, 10.0, 10.0, 10.0</border>
  </View>

</core:Parcel>
