<core:Parcel describes="//parcels/OSAF/views/main"
             itemName="main"
             xmlns:core="//Schema/Core"
             xmlns="//parcels/OSAF/framework/blocks"
             xmlns:doc="//parcels/OSAF/views/main"
             xmlns:events="//parcels/OSAF/framework/blocks/Events">

  <core:version>0.3</core:version>

  <!--
    Queries
  -->
  <Query itemName="myQuery">
    <queryEnum>listOfItems</queryEnum>
    <data></data>
  </Query>

  <Query itemName="parcelViewerQuery">
    <queryEnum>listOfItems</queryEnum>
    <data>parcels/OSAF/views/repositoryviewer/RepositoryBox</data>
  </Query>  

  <!--
    Styles
  -->
  <CharacterStyle itemName="HeaderCharacterStyle">
    <fontFamily>DefaultUIFont</fontFamily>
    <fontSize>12.0</fontSize>
    <fontStyle>bold</fontStyle>
    <fontName></fontName>
  </CharacterStyle>  

  <!--
    Events
  -->
  <BlockEvent itemName="ShowRepositoryViewer">
    <dispatchEnum>SendToBlock</dispatchEnum>
    <dispatchToBlock itemref="doc:ParcelViewer"/>
  </BlockEvent>

  <BlockEvent itemName="ShowDemo">
    <dispatchEnum>SendToBlock</dispatchEnum>
    <dispatchToBlock itemref="doc:ParcelViewer"/>
  </BlockEvent>

  <!--
    Menus
  -->
  <Menu itemName="FileMenu">
    <title>File</title>
    <operation>InsertBefore</operation>
    <menuLocation></menuLocation>
    <itemLocation></itemLocation>
    <helpString></helpString>
  </Menu>

  <Menu itemName="EditMenu">
    <title>Edit</title>
    <operation>InsertBefore</operation>
    <menuLocation></menuLocation>
    <itemLocation></itemLocation>
    <helpString></helpString>
  </Menu>
    
  <!--
    Menu Items
  -->
  <MenuItem itemName="QuitItem">
    <title>Quit</title>
    <operation>InsertBefore</operation>
    <menuLocation>FileMenu</menuLocation>
    <itemLocation></itemLocation>
    <menuItemKind>Normal</menuItemKind>
    <accel>Q</accel>
    <helpString>Quit Chandler</helpString>
    <event itemref="events:Quit"/>
  </MenuItem>
  
  <MenuItem itemName="UndoItem">
    <title>Undo</title>
    <operation>InsertBefore</operation>
    <menuLocation>EditMenu</menuLocation>
    <itemLocation></itemLocation>
    <operation>InsertBefore</operation>
    <menuItemKind>Normal</menuItemKind>
    <accel>Z</accel>
    <helpString></helpString>
    <event itemref="events:Undo"/>
  </MenuItem>

  <MenuItem itemName="RedoItem">
    <title>Redo</title>
    <operation>InsertBefore</operation>
    <menuLocation>EditMenu</menuLocation>
    <itemLocation></itemLocation>
    <menuItemKind>Normal</menuItemKind>
    <accel>Y</accel>
    <helpString></helpString>
    <event itemref="events:Redo"/>
  </MenuItem>

  <MenuItem itemName="EditSeparator1">
    <title></title>
    <operation>InsertBefore</operation>
    <menuLocation>EditMenu</menuLocation>
    <itemLocation></itemLocation>
    <menuItemKind>Separator</menuItemKind>
    <accel></accel>
    <helpString></helpString>
  </MenuItem>
  
  <MenuItem itemName="CutItem">
    <title>Cut</title>
    <operation>InsertBefore</operation>
    <menuLocation>EditMenu</menuLocation>
    <itemLocation></itemLocation>
    <menuItemKind>Normal</menuItemKind>
    <accel>X</accel>
    <helpString></helpString>
    <event itemref="events:Cut"/>
  </MenuItem>

  <MenuItem itemName="CopyItem">
    <title>Copy</title>
    <operation>InsertBefore</operation>
    <menuLocation>EditMenu</menuLocation>
    <itemLocation></itemLocation>
    <menuItemKind>Normal</menuItemKind>
    <accel>C</accel>
    <helpString></helpString>
    <event itemref="events:Copy"/>
  </MenuItem>

  <MenuItem itemName="PasteItem">
    <title>Paste</title>
    <operation>InsertBefore</operation>
    <menuLocation>EditMenu</menuLocation>
    <itemLocation></itemLocation>
    <menuItemKind>Normal</menuItemKind>
    <accel>V</accel>
    <helpString></helpString>
    <event itemref="events:Paste"/>
  </MenuItem>
  
  <MenuItem itemName="EditSeparator2">
    <title></title>
    <operation>InsertBefore</operation>
    <menuLocation>EditMenu</menuLocation>
    <itemLocation></itemLocation>
    <menuItemKind>Separator</menuItemKind>
    <accel></accel>
    <helpString></helpString>
  </MenuItem>
  
  <MenuItem itemName="PreferencesItem">
    <title>Preferences</title>
    <operation>InsertBefore</operation>
    <menuLocation>EditMenu</menuLocation>
    <itemLocation></itemLocation>
    <menuItemKind>Normal</menuItemKind>
    <accel></accel>
    <event itemref="events:Preferences"/>
    <helpString></helpString>
  </MenuItem>

  <!--
    Toolbars
  -->
  <Toolbar itemName="Toolbar">
    <!-- Attributes -->
    <toolSize>16,16</toolSize>
  </Toolbar>

  <!--
    ToolbarItems
  -->
  <ToolbarItem itemName="BackButton">
    <!-- Attributes -->
    <toolbarLocation>Toolbar</toolbarLocation>
    <title>Back</title>
    <bitmap>application/images/back.bmp</bitmap>
    <selectedBitmap></selectedBitmap>
    <toolbarItemKind>Button</toolbarItemKind>
    <statusMessage>Go to the previous view</statusMessage>
  </ToolbarItem>

  <ToolbarItem itemName="ForwardButton">
    <!-- Attributes -->
    <toolbarLocation>Toolbar</toolbarLocation>
    <title>Forward</title>
    <bitmap>application/images/forward.bmp</bitmap>
    <selectedBitmap></selectedBitmap>
    <toolbarItemKind>Button</toolbarItemKind>
    <statusMessage>Go to the next view</statusMessage>
  </ToolbarItem>

  <ToolbarItem itemName="ReloadButton">
    <!-- Attributes -->
    <toolbarLocation>Toolbar</toolbarLocation>
    <title>Forward</title>
    <bitmap>application/images/reload.bmp</bitmap>
    <selectedBitmap></selectedBitmap>
    <toolbarItemKind>Button</toolbarItemKind>
    <statusMessage>Reload the current view</statusMessage>
  </ToolbarItem>

  <ToolbarItem itemName="Spacer">
    <!-- Attributes -->
    <toolbarLocation>Toolbar</toolbarLocation>
    <toolbarItemKind>Separator</toolbarItemKind>
  </ToolbarItem>

  <ToolbarItem itemName="URLBox">
    <!-- Attributes -->
    <toolbarLocation>Toolbar</toolbarLocation>
    <title>URLBox</title>
    <toolbarItemKind>Text</toolbarItemKind>
    <statusMessage></statusMessage>
  </ToolbarItem>

  <!--
    Layout blocks
  -->
  <EmbeddedContainer itemName="ParcelViewer">
    <!-- Attributes -->
    <contentSpec itemref="doc:parcelViewerQuery"/>
    <open>True</open>
    <size>100,20</size>
    <minimumSize>100,20</minimumSize>
    <border>3.0, 3.0, 3.0, 3.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>0.0</stretchFactor>
  </EmbeddedContainer>  

  <Sidebar itemName="Sidebar">
    <!-- Attributes -->
    <hideRoot>True</hideRoot>
    <noLines>True</noLines>
    <useButtons>False</useButtons>
    <columnHeadings>View</columnHeadings>    
    <columnWidths>200</columnWidths>

    <open>True</open>
    <size>200,600</size>
    <minimumSize>200,600</minimumSize>
    <border>0.0, 0.0, 0.0, 0.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>1.0</stretchFactor>
  </Sidebar>
 
  <SplitWindow itemName="MainSplitter">
    <!-- Layout children -->
    <childrenBlocks itemref="doc:Sidebar"/>
    <childrenBlocks itemref="doc:ParcelViewer"/>

    <!-- Attributes -->
    <orientationEnum>Vertical</orientationEnum>
    <splitPercentage>0.25</splitPercentage>

    <contentSpec itemref="doc:myQuery"/>
    <open>True</open>
    <size>900,580</size>
    <minimumSize>900,580</minimumSize>
    <border>2.0, 2.0, 2.0, 2.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>1.0</stretchFactor>
  </SplitWindow>
  
  <View itemName="MainView">
    <!-- Menus -->
    <childrenBlocks itemref="doc:FileMenu"/>
    <childrenBlocks itemref="doc:QuitItem"/>
    <childrenBlocks itemref="doc:EditMenu"/>
    <childrenBlocks itemref="doc:UndoItem"/>
    <childrenBlocks itemref="doc:RedoItem"/>
    <childrenBlocks itemref="doc:EditSeparator1"/>
    <childrenBlocks itemref="doc:CutItem"/>
    <childrenBlocks itemref="doc:CopyItem"/>
    <childrenBlocks itemref="doc:PasteItem"/>
    <childrenBlocks itemref="doc:EditSeparator2"/>
    <childrenBlocks itemref="doc:PreferencesItem"/>
    
    <blockEvents itemref="doc:ShowDemo"/>    
    <blockEvents itemref="doc:ShowRepositoryViewer"/>
    
    <!-- Toolbar -->
    <childrenBlocks itemref="doc:Toolbar"/>
    <childrenBlocks itemref="doc:BackButton"/>
    <childrenBlocks itemref="doc:ForwardButton"/>
    <childrenBlocks itemref="doc:ReloadButton"/>
    <childrenBlocks itemref="doc:Spacer"/>
    <childrenBlocks itemref="doc:URLBox"/>
    
    <!-- Layout children -->
    <childrenBlocks itemref="doc:MainSplitter"/>
    
    <!-- Attributes -->
    <orientationEnum>Vertical</orientationEnum>

    <contentSpec itemref="doc:myQuery"/>
    <open>True</open>
    <size>900,600</size>
    <minimumSize>900,600</minimumSize>
    <border>10.0, 10.0, 10.0, 10.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>1.0</stretchFactor>
  </View>

</core:Parcel>
