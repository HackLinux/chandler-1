  <!--
    Toolbars
  -->
  <NavigationBar itemName="NavigationBar">
    <!-- Attributes -->
    <toolSize>13,13</toolSize>
  </NavigationBar>

  <!--
    ToolbarItems
  -->
  <ToolbarItem itemName="BackButton">
    <!-- Attributes -->
    <toolbarLocation>NavigationBar</toolbarLocation>
    <title>Back</title>
    <bitmap>application/images/back.png</bitmap>
    <selectedBitmap></selectedBitmap>
    <toolbarItemKind>Button</toolbarItemKind>
    <statusMessage>Go to the previous view</statusMessage>
  </ToolbarItem>

  <ToolbarItem itemName="ForwardButton">
    <!-- Attributes -->
    <toolbarLocation>NavigationBar</toolbarLocation>
    <title>Forward</title>
    <bitmap>application/images/forward.png</bitmap>
    <selectedBitmap></selectedBitmap>
    <toolbarItemKind>Button</toolbarItemKind>
    <statusMessage>Go to the next view</statusMessage>
  </ToolbarItem>

  <ToolbarItem itemName="RefreshButton">
    <!-- Attributes -->
    <toolbarLocation>NavigationBar</toolbarLocation>
    <title>Forward</title>
    <bitmap>application/images/refresh.png</bitmap>
    <selectedBitmap></selectedBitmap>
    <toolbarItemKind>Button</toolbarItemKind>
    <statusMessage>Refresh the current view</statusMessage>
  </ToolbarItem>

  <ToolbarItem itemName="Spacer">
    <!-- Attributes -->
