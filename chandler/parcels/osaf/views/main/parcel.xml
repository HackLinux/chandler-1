  </ToolbarItem>

  <!--
    Status Bar
  -->
  <StatusBar itemName="StatusBar">
  </StatusBar>

  <!-- 
    About Chandler View 
  -->
  <HTML itemName="AboutChandlerHTML">
    <url>application/welcome.html</url>
    <eventBoundary>True</eventBoundary>
    <open>True</open>
    <size>900,580</size>
    <minimumSize>900,580</minimumSize>
    <border>1.0, 1.0, 1.0, 1.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>1.0</stretchFactor>
  </HTML>

  <!--
    Sidebar locations
  -->
  <Node itemName="URLRoot">
    <displayName></displayName>
    <children itemref="doc:AboutChandler"/>
    <children itemref="doc:Repository"/>
    <children itemref="doc:Demo"/>
    <children itemref="doc:ZaoBao"/>
    <children itemref="doc:MixedView"/>
    <children itemref="doc:CalendarView"/>
    <children itemref="doc:ContactsView"/>
    <children itemref="doc:NotesView"/>
  </Node>

  <Node itemName="AboutChandler">
    <displayName>About Chandler</displayName>
    <item itemref="doc:AboutChandlerHTML"/>
  </Node>

  <Node itemName="Repository">
    <displayName>Repository</displayName>
    <item itemref="repository:RepositoryBox"/>
  </Node>

  <Node itemName="Demo">
    <displayName>Block Demo</displayName>
    <item itemref="demo:TabBox"/>
  </Node>

  <Node itemName="ZaoBao">
    <displayName>ZaoBao</displayName>
    <item itemref="zaobao:AboutZaoBao"/>
    <children itemref="doc:OSAFRSS"/>
    <children itemref="doc:ZaoBaoRSS"/>
    <children itemref="doc:TedRSS"/>
    <children itemref="doc:ChaoRSS"/>
    <children itemref="doc:LessigRSS"/>
    <children itemref="doc:MarkRSS"/>
  </Node>

  <Node itemName="OSAFRSS">
    <displayName>OSAF News</displayName>
    <item itemref="zaobao:ZaoBaoChannelView"/>
  </Node>
  <Node itemName="TedRSS">
    <displayName>Ted Leung on the air</displayName>
    <item itemref="zaobao:ted_ZaoBaoChannelView"/>
  </Node>
  <Node itemName="ZaoBaoRSS">
    <displayName>ZaoBao News</displayName>
    <item itemref="zaobao:zaobao_ZaoBaoChannelView"/>
  </Node>
  <Node itemName="ChaoRSS">
    <displayName>Chao's Blog</displayName>
    <item itemref="zaobao:chao_ZaoBaoChannelView"/>
  </Node>
  <Node itemName="LessigRSS">
    <displayName>Lessig Blog</displayName>
    <item itemref="zaobao:lessig_ZaoBaoChannelView"/>
  </Node>

  <Node itemName="MarkRSS">
    <displayName>dive in to mark</displayName>
    <item itemref="zaobao:mark_ZaoBaoChannelView"/>
  </Node>

  <Node itemName="CalendarView">
    <displayName>Calendar</displayName>
    <item itemref="content:CalendarListView"/>
  </Node>

  <Node itemName="ContactsView">
    <displayName>Contacts</displayName>
    <item itemref="content:ContactListView"/>
  </Node>

  <Node itemName="NotesView">
    <displayName>Notes</displayName>
    <item itemref="content:NoteListView"/>
  </Node>

  <Node itemName="MixedView">
    <displayName>Mixed</displayName>
    <item itemref="content:MixedListView"/>
  </Node>

  <!--
    Bookmarks
  -->
  <Node itemName="BookmarksRoot">
    <displayName></displayName>
    <children itemref="doc:RepositoryBookmark"/>
    <children itemref="doc:ZaoBaoBookmark"/>
    <children itemref="doc:ContactsViewBookmark"/>
  </Node>

  <Node itemName="RepositoryBookmark">
    <displayName>Repository</displayName>
    <item itemref="repository:RepositoryBox"/>
  </Node>

  <Node itemName="ZaoBaoBookmark">
    <displayName>ZaoBao</displayName>
    <item itemref="zaobao:ZaoBaoView"/>
  </Node>
  
  <Node itemName="ContactsViewBookmark">
    <displayName>Contacts</displayName>
    <item itemref="content:ContactListView"/>
  </Node>

  <!--
    Layout blocks
  -->
  <EmbeddedContainer itemName="MainViewer">
    <!-- Attributes -->
    <contentSpec itemref="doc:mainViewerQuery"/>
    <open>True</open>
    <size>100,20</size>
    <minimumSize>100,20</minimumSize>
    <border>3.0, 3.0, 3.0, 3.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>0.0</stretchFactor>
  </EmbeddedContainer>  

  <Tree itemName="Sidebar">
    <!-- Attributes -->
    <elementDelegate>OSAF.views.main.SideBar.SideBarDelegate</elementDelegate>
    <selection itemref="doc:AboutChandler"/>

    <hideRoot>True</hideRoot>
    <noLines>True</noLines>
    <useButtons>False</useButtons>
    <columnHeadings>View</columnHeadings>    
    <columnWidths>125</columnWidths>
    <rootPath  itemref="doc:URLRoot"/>

    <open>True</open>
    <size>125,600</size>
    <minimumSize>125,600</minimumSize>
    <border>0.0, 0.0, 0.0, 0.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>1.0</stretchFactor>
  </Tree>
 
  <BookmarksBar itemName="BookmarksBar">
    <!-- Attributes -->
    <bookmarksPath itemref="doc:BookmarksRoot"/>

    <contentSpec itemref="doc:myQuery"/>
    <open>True</open>
    <size>200,20</size>
    <minimumSize>200,20</minimumSize>
    <border>2.0, 2.0, 2.0, 2.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>0.0</stretchFactor>
  </BookmarksBar>

  <SplitWindow itemName="MainSplitter">
    <!-- Layout children -->
    <childrenBlocks itemref="doc:Sidebar"/>
    <childrenBlocks itemref="doc:MainViewer"/>

    <!-- Attributes -->
    <orientationEnum>Vertical</orientationEnum>
    <splitPercentage>0.15</splitPercentage>
    
    <contentSpec itemref="doc:myQuery"/>
    <open>True</open>
    <size>900,580</size>
    <minimumSize>900,580</minimumSize>
    <border>2.0, 2.0, 2.0, 2.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>1.0</stretchFactor>
  </SplitWindow>
  
  <BoxContainer itemName="BookmarksContainer">
    <!-- Layout children -->
    <childrenBlocks itemref="doc:BookmarksBar"/>
    <childrenBlocks itemref="doc:MainSplitter"/>

    <!-- Attributes -->
    <orientationEnum>Vertical</orientationEnum>

    <contentSpec itemref="doc:myQuery"/>
    <open>True</open>
    <size>200,100</size>
    <minimumSize>200,100</minimumSize>
    <border>2.0, 2.0, 2.0, 2.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>1.0</stretchFactor>
  </BoxContainer>
  
  <View itemName="MainView">
    <!-- Menus -->
    <childrenBlocks itemref="doc:FileMenu"/>
    <childrenBlocks itemref="doc:QuitItem"/>
    <childrenBlocks itemref="doc:EditMenu"/>
    <childrenBlocks itemref="doc:UndoItem"/>
    <childrenBlocks itemref="doc:RedoItem"/>
    <childrenBlocks itemref="doc:EditSeparator1"/>
    <childrenBlocks itemref="doc:CutItem"/>
    <childrenBlocks itemref="doc:CopyItem"/>
    <childrenBlocks itemref="doc:PasteItem"/>
    <childrenBlocks itemref="doc:EditSeparator2"/>
    <childrenBlocks itemref="doc:PreferencesItem"/>
    <childrenBlocks itemref="doc:ViewMenu"/>
    <childrenBlocks itemref="doc:ViewSidebarItem"/>
    <childrenBlocks itemref="doc:ViewNavigationBarItem"/>
    <childrenBlocks itemref="doc:ViewStatusBarItem"/>
    <childrenBlocks itemref="doc:TestMenu"/>
    <childrenBlocks itemref="doc:GenerateAllItem"/>
    <childrenBlocks itemref="doc:GenerateContactItem"/>
    <childrenBlocks itemref="doc:GenerateCalendarItem"/>
    <childrenBlocks itemref="doc:GenerateNoteItem"/>
    <childrenBlocks itemref="doc:ImportContactItem"/>
    <childrenBlocks itemref="doc:CheckRepositoryItem"/>
    
    <!-- Toolbar -->
    <childrenBlocks itemref="doc:NavigationBar"/>
    <childrenBlocks itemref="doc:BackButton"/>
    <childrenBlocks itemref="doc:ForwardButton"/>
    <childrenBlocks itemref="doc:RefreshButton"/>
    <childrenBlocks itemref="doc:Spacer"/>
    <childrenBlocks itemref="doc:URLBox"/>
    
    <!-- Status Bar -->
    <childrenBlocks itemref="doc:StatusBar"/>
    
    <!-- Layout children -->
    <childrenBlocks itemref="doc:BookmarksContainer"/>
    
    <!-- Attributes -->
    <orientationEnum>Vertical</orientationEnum>

    <contentSpec itemref="doc:myQuery"/>
    <open>True</open>
    <size>900,600</size>
    <minimumSize>900,600</minimumSize>
    <border>10.0, 10.0, 10.0, 10.0</border>
    <alignmentEnum>grow</alignmentEnum>
    <stretchFactor>1.0</stretchFactor>
  </View>

</core:Parcel>
